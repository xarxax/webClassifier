$('.eu-buildings input').live('click', function(){
        if ($(this).is(':checked')){
            $('.fieldset-access').slideDown();
 
        } else{
            $('.fieldset-access').slideUp();
        }
    });
    $('.eu-buildings input:checked').parent().next().show();
