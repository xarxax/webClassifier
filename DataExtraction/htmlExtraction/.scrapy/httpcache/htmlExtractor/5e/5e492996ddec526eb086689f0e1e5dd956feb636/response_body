									<script type="text/javascript">
				$(document).ready(function() {
					setAltures();
					
					function setAltures(){
						var mes_alt=0;
						jQuery('.act_title').each(function(){
							var alt=jQuery(this).height();
							if(alt>mes_alt){
								mes_alt=alt;
							}
						});		
						
						jQuery('.act_title').height(mes_alt); 				
					}
					
				});
				$(window).load(function(){
					setAltures2();
					function setAltures2(){
						var mes_alt=0;
						
						jQuery('.sliderlist').each(function(){
							var alt=jQuery(this).height();
							if(alt>mes_alt){
								mes_alt=alt;
							}
						});		
						
						jQuery('.sliderlist').height(mes_alt); 				
					}
				});
			</script>
			
