<script type="text/javascript">


 
function rightActive()	{
	var $activeElement = jQuery(".active");
	$( ".active" ).next().addClass( "active" );
	$activeElement.removeClass("active");
}	
function leftActive()	{
	var $activeElement = jQuery(".active");
	$( ".active" ).prev().addClass( "active" );
	$activeElement.removeClass("active");
}	

var itemWidth = $("ul.newsflash-horiz li").outerWidth(true);

console.log(itemWidth);
 
function iconRight(){

	var items = jQuery('ul.newsflash-horiz li').length;
	var first = jQuery("ul.newsflash-horiz li:first-child").attr('id');
	var active = jQuery('ul.newsflash-horiz li.active').attr('id');

	rightActive();

	if (active == 6) {
		jQuery('#homeFlashWrap #iconRight').hide();
		jQuery("ul.newsflash-horiz li:nth-child(6)").addClass('active');
		return false;		
	} else {
		jQuery("ul.newsflash-horiz").css('left', '+='+itemWidth);
	}
}


function iconLeft(){

	var items = jQuery('ul.newsflash-horiz li').length;
	var first = jQuery("ul.newsflash-horiz li:first-child").attr('id');
	var active = jQuery('ul.newsflash-horiz li.active').attr('id');

	leftActive();

	console.log(items);
	console.log(active);

	if (active == 2) {
		jQuery('#homeFlashWrap #iconLeft').hide();
		jQuery("ul.newsflash-horiz li:nth-child(3)").addClass('active');
		  return false;		
	} else {
	  	jQuery("ul.newsflash-horiz").css('left', '-='+itemWidth);
		console.log('left');
	}
}

</script>




