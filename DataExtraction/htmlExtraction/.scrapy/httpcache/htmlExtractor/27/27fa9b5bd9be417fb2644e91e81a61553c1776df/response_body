	$(function() {
		// read artists height of paragraph tag
		$("a.applycareer").each(function(index, element) {
		 
			var ptagid = $(this).prev('div').height();
			$(this).prev('div').attr("data-id",ptagid).css("height","60px");
		});
		
		// click for read more on artists
		$('a.applycareer').click(function() {
			
			if ($(this).hasClass("clicked")) {
				$(this).removeClass("clicked").html('View Details');
				$(this).prev('div').animate({'height':'60'});
			}
			else {
				$(this).addClass("clicked").html('Close Details');
				animateheight = $(this).prev('div').attr("data-id");
				$(this).prev('div').animate({'height':animateheight});	
			}
			return false;
		});
	});		

</script>
