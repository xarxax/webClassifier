<script>
jQuery().ready(function($){

$('#loading')
    .hide()  // hide it initially
    .ajaxStart(function() {
        $(this).show();
    })
    .ajaxStop(function() {
        $(this).hide();
    })
;



// Ajax Called When Page is Load/Ready (Load Manufacturer)
jQuery.ajax({
					  url: 'man_list2.php',
					  global: false,
					  type: "POST",
					  dataType: "xml",
					  async: false,	
					  success: populateComp
				}); 
				
				

//Ajax Called When You Change  Manufaturer
$("#ingresso").change(function () 
	{
	 resetValues();	
	 
	    var data = { man :$(this).attr('value')	};
	jQuery.ajax({
					  url: 'type_list2.php',
					  type: "POST",
					  dataType: "xml",
					  data:data,
					  async: false,	
					  success: populateType
				}); 
	});
	
$("#batteria").change(function () 
	{
	
	 
	   var data = { 
		man :$('#ingresso').val(),
		typ : $(this).attr('value')
		};
	jQuery.ajax({
					  url: 'model_list2.php',
					  type: "POST",
					  dataType: "xml",
					  data:data,
					  async: false,	
					  success: populateModel
				}); 
	});
	
	$("#capacita").change(function () 
	{
	
	 
	   var data = { 
		man1 :$('#ingresso').val(),
		typ1 :$('#batteria').val(),
		vert1 : $(this).attr('value')
		};
	jQuery.ajax({
					  url: 'macro_list.php',
					  type: "POST",
					  dataType: "xml",
					  data:data,
					  async: false,	
					  success: populateMacro
				}); 
	});
	
				
					});	
	</script>

