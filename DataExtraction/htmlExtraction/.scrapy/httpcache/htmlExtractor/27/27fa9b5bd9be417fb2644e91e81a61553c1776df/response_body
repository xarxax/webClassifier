		// close slider
		$("ul.categories li a.close").click(function(e) {
			
			if ( WindowSize.winSize <= 768 ) {
				ListItem = $(this).prev("div");
				//scrollUpShadow();	
				ListItem.css({"top":""});
				ListItem.animate( {
					bottom:  '0px',
					height: '88px',
					paddingTop: '0px'
				
				});
				ListItem.find("a.slider").addClass("arrow");
				ListItem.next("a.close").fadeOut(500);
				ListItem.find("ul li.intro").fadeOut(500);
				e.preventDefault();
			
			}
			else {	
				ListItem = $(this).closest("li");
				closeSlider(ListItem);
				e.preventDefault();
			}

		});
			
