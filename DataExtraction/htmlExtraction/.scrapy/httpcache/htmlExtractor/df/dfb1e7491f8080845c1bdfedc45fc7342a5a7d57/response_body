      $('#c').on('mouseover', '.s', function(){
          $('#c .s').removeClass('activePin');
          $(this).addClass('activePin');
      });

  
          $('#circle-1').on('mouseover', function(){

              $('body').addClass('homeContentHide');

              if ($('#pinone').hasClass("openPin")) {

                  $('.pin').removeClass('openPin');
                  $('body').removeClass('homeContentHide');
              } else {
                  $('.pin').removeClass('openPin');
                  $('#tree-pins').find('#pinone').toggleClass('openPin'); 

              }
          });

          $('#circle-2').on('mouseover', function(){
             $('body').addClass('homeContentHide');
