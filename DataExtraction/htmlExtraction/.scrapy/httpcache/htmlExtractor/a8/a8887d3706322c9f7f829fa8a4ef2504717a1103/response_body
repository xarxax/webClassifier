    <script type="text/javascript">
        $(".menu-btn").click(function() {
            $("nav").toggleClass("open");
        });

        $("nav ul li.btn-newsletter .label").click(function(){
            $(this).parent().toggleClass("open");
        });
    </script>

    <script type="text/javascript">
        $(window).load(function(){
            $('.social .thumb').each(function(){
                var img = $(this).children('img');
                img.css({
                    top: $(this).height() / 2 - img.height() / 2
                });
            });
        });

        $(document).ready(function() {
            $('.btn-legal').click(function(e){
                e.preventDefault();

                var bottom = 58;

                if($('.legal-wrapper').hasClass('active')){
                    $('.legal-wrapper').removeClass('active').stop().animate({bottom: bottom+'px'}, 500, 'easeInOutExpo');
                } else {
                    bottom += $('.legal-content').outerHeight();
                    $('.legal-wrapper').addClass('active').stop().animate({bottom: bottom+'px'}, 500, 'easeInOutExpo');
                }
            });

            $('.btn-back').click(function(e){
                e.preventDefault();
                history.go(-1);
            });

            $('.datepicker').datepicker({
                dateFormat: 'yy-mm-dd'
            });

            document.addEventListener('keydown', function (e) {
              if (e.keyCode === 27) {
                var menuItems = $('header nav li *[role=menuitem]')
                menuItems.each(function (item) {
                  if ($(menuItems[item]).attr('aria-controls')) {
                    if ($(menuItems[item]).parent().hasClass('open')) {
                      $('#' + $(menuItems[item]).attr('aria-controls')).attr('aria-hidden', 'true')
                      $('#' + $(menuItems[item]).attr('aria-controls')).attr('aria-expanded', 'false')
                      $(menuItems[item]).parent().removeClass("open")
                    }
                  }
                })
              }
            });
        });
    </script>

    
    <script>
      var menuItems = $('header nav li *[role=menuitem]')
      menuItems.click(function (e) {
        var label = e.target
        if ($(label).attr('aria-controls')) {
          if ($(label).parent().hasClass('open')) {
            $('#' + $(label).attr('aria-controls')).attr('aria-hidden', 'true')
            $('#' + $(label).attr('aria-controls')).attr('aria-expanded', 'false')
            $(label).parent().removeClass("open")
          } else {
            $('#' + $(label).attr('aria-controls')).attr('aria-hidden', 'false')
            $('#' + $(label).attr('aria-controls')).attr('aria-expanded', 'true')
            $(label).parent().addClass("open")
          }
        }
      })
    </script>

