        <script type="text/javascript">

            var isMobile = {
                Android: function() {
                    return /Android/i.test(navigator.userAgent);
                },
                BlackBerry: function() {
                    return /BlackBerry/i.test(navigator.userAgent);
                },
                iOS: function() {
                    return /iPhone|iPad|iPod/i.test(navigator.userAgent);
                },
                Windows: function() {
                    return /IEMobile/i.test(navigator.userAgent);
                },
                any: function() {
                    return (isMobile.Android() || isMobile.BlackBerry() || isMobile.iOS() || isMobile.Windows());
                }
            };

            $(function() {

                // selected language flag
                var selectedLanguage = 'eng';
                $('#actual-language').html('<img src="/img/flags/' + selectedLanguage + '.png" alt="'+ selectedLanguage +'" />');
                
                if( $('.main-menu').css('display') != 'none'){
                    var newsContainer = $('#noticias');
                    newsContainer.imagesLoaded( function() {
                        newsContainer.masonry();
                    });
                }

                // solucion para tema de menu --------------
                $('.gotowithlocation').on({
                    click: function( e){
                        e.preventDefault();
                        if( $('.zone li').size() > 1){

                            $('.zones').expose({
                                padding: 20,
                            });
                            // scroll un poco
                            _target = $('.zones');
                            $('html, body').stop().animate({
                                'scrollTop': ( _target.offset() )?(_target.offset().top-160):0
                            }, 900, 'swing');
                            // --------------

                        }else if( $('.zone li').size() == 1){
                            // cuando tiene uno lo redirijo directamente
                            var goToUrl = $('.zone a:first').attr('rel');
                            window.location.href = goToUrl;
                        }
                    }
                });

                $('body').on({
                    'expose:shown': function(){
                        $('.zones a').bind('click', function( e){
                            e.preventDefault();
                            window.location.href = $(this).attr('rel');
                        });
                    },
                    'expose:overlay:removed': function(){
                        $('.zones a').unbind('click');
                    }
                });
                // ------------------------------------------

                $('#slide-bx .group-slide').bxSlider({
                    mode: 'fade',
                    auto: true,
                    autoControls: false,
                    controls: true,
                    pager: false,
                });

                var btn_movil = $('#touch-menu'),
                    menu = $('.menu').find('ul');

                // Al dar click agregar/quitar clases que permiten el despliegue del men√∫
                btn_movil.on('click', function (e) {
                    e.preventDefault();
                    var el = $(this);
                    el.toggleClass('nav-active');
                });
                
                                $('#PageStartDate')
                        .datePicker();

                
                
                $('.arrow-lang').click(function( e){
                    e.preventDefault();
                    $('.main-menu').toggleClass('active');                    
                });

                var w=$(window).width();

                                $('.itemscroll').on('click',function (e) {
                    e.preventDefault();

                    var target = this.hash,
                    $target = $(target);

                    if(w<330){
                        $('html, body').stop().animate({
                            'scrollTop': $target.offset().top-25
                        }, 900, 'swing', function () {
                            //window.location.hash = target;
                        });
                    }else{
                        $('html, body').stop().animate({
                            'scrollTop': $target.offset().top-40
                        }, 900, 'swing', function () {
                            //window.location.hash = target;
                        });
                    }
                });
                
                if( $('#vmap').size() > 0){
                    $('#vmap').vectorMap({
                        map: 'world_en',
                        borderColor: '#F6EDDB',
                        backgroundColor: '#F6EDDB',
                        color: '#D7D8D2',
                        hoverOpacity: 1,
                        enableZoom: false,
                        showTooltip: false,
                        normalizeFunction: 'polynomial',
                        onRegionClick: function(event, code, region){
                            event.preventDefault();
                            for( i in countries){
                                if( countries[i] == code ){
                                    window.location.href = '/countries/display/' + code;
                                    break;
                                }
                            }
                            //window.location.href = "/countries/display/" + code;
                        }
                    });

                                                            $('#vmap').vectorMap('set', 'colors', {ar: '#69BEBD'});
                                        $('#vmap').vectorMap('set', 'colors', {br: '#F5BC09'});
                                        $('#vmap').vectorMap('set', 'colors', {cl: '#F0B2AE'});
                                        $('#vmap').vectorMap('set', 'colors', {co: '#e96800'});
                                        $('#vmap').vectorMap('set', 'colors', {ec: '#b13f21'});
                                        $('#vmap').vectorMap('set', 'colors', {it: '#E62722'});
                                        $('#vmap').vectorMap('set', 'colors', {mx: '#3CA55E'});
                                        $('#vmap').vectorMap('set', 'colors', {pa: '#0030ff'});
                                        $('#vmap').vectorMap('set', 'colors', {tr: '#9700c9'});
                                        $('#vmap').vectorMap('set', 'colors', {us: '#386EA1'});
                                        
                }

            });

            $(function() {
              $(".expand .show").click(function(e){
                  e.preventDefault();
                  var obj = $(this).parents(".expand");
                  if ($(obj).hasClass("expanded")) {
                      $(obj).removeClass("expanded");
                      $(".full-info",obj).slideUp(50);
                      $(this).html("read more");
                  } else {
                      $(obj).addClass("expanded");
                      $(".full-info",obj).slideDown(800);
                      $(this).html("<i class='ir close'>Close</i>");
                      $(this).attr('title', "Close");
                  }
              });


              // show correct link app
              if( isMobile.Android() ){
                $('.app-store').hide();
              }
              if( isMobile.iOS() ){
                $('.google-play').hide();
              }
              
            });
        </script>
        
