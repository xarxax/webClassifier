<script type='text/javascript'>
function cmGetDefaultPageID() {
    var b = window.location.pathname;
    var e = b.indexOf("?");
    if (e != -1) {
        b = b.substr(0, e)
    }
    var d = b.indexOf("#");
    if (d != -1) {
        b = b.substr(0, d)
    }
    var a = b.indexOf(";");
    if (a != -1) {
        b = b.substr(0, a)
    }
    var c = b.lastIndexOf("/");
    if (c == b.length - 1) {
        b = b + "default"
    }
    while (b.indexOf("/") == 0) {
        b = b.substr(1, b.length)
    }
    return (b)
}
</script>
        



