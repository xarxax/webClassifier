<script>
	function navigateToHome (e) {
		e.stopPropagation();
		if (e.target.id==='header-wrapper') {
			if (window.innerWidth <= 970) {
				window.location = 'http://www.newyorkfries.com/'
			}
		}
	}
	document.querySelector('#header-wrapper').addEventListener('click', navigateToHome)
</script>


