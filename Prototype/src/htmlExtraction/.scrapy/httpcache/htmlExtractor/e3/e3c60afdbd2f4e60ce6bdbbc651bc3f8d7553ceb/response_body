                var $j = jQuery.noConflict();
                $j(document).ready(function() {
                   $j("input.MULTIPLE_11").click(function() {
                    window.open('/terms-and-privacy/#tos','_blank','width=500,height=500,toolbar=no,scrollbars=yes,menubar=no,location=no')
                    });
                    // show / hide referral source field
                   $j('select.DROPDOWN_14').change(function () {
                      if ( $j('select.DROPDOWN_14').val() == "Employer" || $j('select.DROPDOWN_14').val() == "Referral" || $j('select.DROPDOWN_14').val() == "Other" ) {
                          $j('div.TEXT_17').show();
                          $j('input.TEXT_17').val("");
                      } else {
                          $j('div.TEXT_17').hide();
                          $j('input.TEXT_17').val("N/A");
                      }
                   });
                   //show / hide the student program of study field
                   $j('input.SINGLE_19-Yes').click(function () {
                      $j('div.DROPDOWN_20').show();
                      $j('div.DROPDOWN_20 select').val("Select One");
                   });
                   $j('input.SINGLE_19-No').click(function () {
                      $j('div.DROPDOWN_20').hide();
                      $j('div.DROPDOWN_20 select').val("Other");
                   });
                   // email notifications checked
                   $j("input.MULTIPLE_15").attr("checked", true);
                   $j(".phone").mask("(999) 999-9999");
                });
