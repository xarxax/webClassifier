<script>

// Change style of navbar on scroll
window.onscroll = function() {myFunction()};
function myFunction() {
    var navbar = document.getElementById("myNavbar");
    if (document.body.scrollTop > 110 || document.documentElement.scrollTop > 110) {
        navbar.className = "w3-navbar" + " w3-card-2" + " w3-animate-top" + " w3-white";
		e3NavImage.className = "w3-animate-opacity" + " e3-display-uppermiddle" + " w3-margin-4" + "  w3-hide-medium" + " w3-hide-large";
		e3NavImageB.className = "w3-animate-opacity" + " e3-display-topright" + " w3-margin-4" + "  w3-hide-small";
    } else {
        navbar.className = navbar.className.replace(" w3-card-2 w3-animate-top w3-white", "");
		e3NavImage.className = e3NavImage.className.replace("", " w3-hide-medium w3-hide-large");
		e3NavImageB.className = e3NavImage.className.replace("", " w3-hide");
    }
}

// Used to toggle the menu on small screens when clicking on the menu button
function toggleFunction() {
    var x = document.getElementById("navDemo");
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
    } else {
        x.className = x.className.replace(" w3-show", "");
    }
}

var slideIndex = 0;
carousel();
function carousel() {
    var i;
    var x = document.getElementsByClassName("mySlides");
    for (i = 0; i < x.length; i++) {
      if (slideIndex == x.length) {
        clearTimeout(carousel);
		return;
	  }
	  else{
        x[i].style.display = "none";
	  }
    }
	slideIndex++;

    x[slideIndex-1].style.display = "block"; 
    setTimeout(carousel, 3000); // Change image every 4 seconds
}
var slideIndex2 = 0;
carousel2();
function carousel2() {
    var i;
    var x = document.getElementsByClassName("mySlides2");
    for (i = 0; i < x.length; i++) {
      if (slideIndex2 == x.length) {
        clearTimeout(carousel2);
		return;
	  }
	  else{
        x[i].style.display = "none";
	  }
    }
	slideIndex2++;

    x[slideIndex2-1].style.display = "block"; 
    setTimeout(carousel2, 3000); // Change image every 4 seconds
}

</script>
