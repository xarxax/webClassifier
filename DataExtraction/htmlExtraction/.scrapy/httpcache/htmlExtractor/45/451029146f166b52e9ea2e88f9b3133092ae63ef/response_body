		global_dictionary.get = function(str, data)
		{
			var undef;
			var ret;
			if (typeof(undef) == typeof(data)) {
				data = [];
			}
			if (this.words[str]) {
				ret = this.words[str];
			} else {
				ret = str;
			}
			for (var i in data) {
				i = parseInt(i);
				ret = eval('ret.replace(/\\[:' + (i + 1) + ':\\]/, "' + data[i] + '");');
			}
			return ret;
		}
