<script>
jQuery(function(){

    firstMenu = $(".goog-te-menu-value span:first").text();
    if($('.goog-te-menu-value span:first').text() == "Select Language"){
        if($(".slider-pro-frontpage .sp-slides").length){
            $(".slider-pro-frontpage .sp-image").each(function(){
                var src = $(this).attr('src').split("/").pop();
                var lang = "English";
                if (lang == "English" || lang == "French" || lang == "Spanish" || lang == "Portuguese") {
                    var src = "images/"+lang+"/"+src;
                    $(this).attr("src", src);
                } else {
                        var src = "images/"+"English"+"/"+src;
                        $(this).attr("src", src);
                    }
            });
        }
    }else{
        //Add todo here
        if($(".slider-pro-frontpage .sp-slides").length){
            $(".slider-pro-frontpage .sp-image").each(function(){
                var src = $(this).attr('src').split("/").pop();
                var lang = $('.goog-te-menu-value span:first').text();
                if (lang == "English" || lang == "French" || lang == "Spanish" || lang == "Portuguese") {
                    var src = "images/"+lang+"/"+src;
                    $(this).attr("src", src);
                } else {
                        var src = "images/"+"English"+"/"+src;
                        $(this).attr("src", src);
                    }
            });
        }
        //Finish todo here
    }
    resetSlider();
    setTimeout(waitNav, 500);
});

function waitNav() {
    if (firstMenu != $('.goog-te-menu-value span:first').text()) {
        if($('.goog-te-menu-value span:first').text() == "Select Language"){
            if($(".slider-pro-frontpage .sp-slides").length){
                $(".slider-pro-frontpage .sp-image").each(function(){
                    var src = $(this).attr('src').split("/").pop();
                    var lang = "English";
                    if (lang == "English" || lang == "French" || lang == "Spanish" || lang == "Portuguese") {
                        var src = "images/"+lang+"/"+src;
                        $(this).attr("src", src);
                    } else {
                        var src = "images/"+"English"+"/"+src;
                        $(this).attr("src", src);
                    }
                });
            }
        }else{
            //Add todo here
            if($(".slider-pro-frontpage .sp-slides").length){
                $(".slider-pro-frontpage .sp-image").each(function(){
                    var src = $(this).attr('src').split("/").pop();
                    var lang = $('.goog-te-menu-value span:first').text();
                    if (lang == "English" || lang == "French" || lang == "Spanish" || lang == "Portuguese") {
                        var src = "images/"+lang+"/"+src;
                        $(this).attr("src", src);
                    } else {
                        var src = "images/"+"English"+"/"+src;
                        $(this).attr("src", src);
                    }
                });
            }
            //Finish todo here
        }
        firstMenu = $('.goog-te-menu-value span:first').text();
        resetSlider();
        setTimeout(waitNav, 500);

    }
    else {
        setTimeout(waitNav, 500);
    }
}

function resetSlider() {
    $( '#my-slider' ).sliderPro({
        height: 450,
        width: "100%",
        buttons: false,
        arrows: true,
        aspectRatio: 3.67,
        responsive: true
    });

    // Re-add the image maps (as they get stripped by Slider Pro for some reason)
    $('img[data-default="images/slider-1.jpg"').attr("usemap","#image-map-1");
    $('img[data-default="images/slider-2.jpg"').attr("usemap","#image-map-2");
    $('img[data-default="images/slider-3.jpg"').attr("usemap","#image-map-3");
    $('img[data-default="images/slider-4.jpg"').attr("usemap","#image-map-4");
    $('img[data-default="images/slider-5.jpg"').attr("usemap","#image-map-5");

    // Responsive image maps
    $('img[usemap]').rwdImageMaps();
}
</script>
</body>
</html>
