$(document).ready(function(){
  var x = $(".items div").toArray();
  var y = new String;
  $(".items").empty();
  x.sort(function() { return 0.5 - Math.random(); });
  while ((x.length % 5) != 0) {
    //x[x.length] = x[Math.floor(Math.random() * (x.length - (x.length % 5)))];
    x[x.length] = x[x.length % 5];
  }
  for (i = 0; i < x.length; i++) {
    if (((i + 1) % 5) == 1) { y += "<div>"; }
    y += x[i].innerHTML;
    if (((i + 1) % 5) == 0) { y += "</div>"; }
  }
  $(".items").append(y);
  $(".scrollable").scrollable({circular: true}).autoscroll({autoplay: true});
});
