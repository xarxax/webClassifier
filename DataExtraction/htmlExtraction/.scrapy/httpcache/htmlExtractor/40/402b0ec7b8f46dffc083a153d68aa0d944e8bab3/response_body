function epOver(imgName){
   if (document.images){
      imgOver=eval(imgName + "Over.src");
      document[imgName].src= imgOver;
    }
 }

function epNorm(imgName){
   if (document.images){
      imgNorm=eval(imgName + "Norm.src");
      document[imgName].src= imgNorm;
    }
 }
