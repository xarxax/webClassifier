<script type="text/javascript">
// Dropdown menu
	var	mouseIN = function(){
		$(this).children('ul').stop().slideDown(100);
	};
	var mouseOUT = function(){
		$(this).children('ul').slideUp(100);
	}
$(function(){
	$('.mainnav ul li:last-child').css({'margin-right':0});
	$('.mainnav ul li:has(ul.sub-menu)').hoverIntent({
    over: mouseIN,
    out: mouseOUT
	});
});
</script>
