  function SeeMoreMenu()
  {
    $(".seeMoreLi").show();
    $(".seeMore").hide();
  }
  function seePagePg(totalProd,counterpg,currPg)
  {
   for (var x = 1; x <=counterpg; x++) {
    $(".product_page_"+ x).hide();
   }
   $(".liPage_No").removeClass('active');
   $(".product_page_"+ currPg).show();
   $("#liPage_No"+currPg).addClass('active');
  }
