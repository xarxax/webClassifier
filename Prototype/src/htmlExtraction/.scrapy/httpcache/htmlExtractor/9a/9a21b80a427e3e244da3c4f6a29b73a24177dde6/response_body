<script type="text/javascript">
$(function() {
	$('.sub_menus').hover(
		function() {
			$(this).show();
			$(this).next('.menus').css({'color':'#e02441'});
		},
		function() {
			$(this).next('.menus').css({'color':'#1c1b1a'});
			$(this).hide();
		}
	);
	$('.menus').hover(
		function() {
			$('.sub_menus').hide();
			$(this).prev('.sub_menus').fadeIn();
		},
		function() {
			$(this).prev('.sub_menus').hide();
		}
	);
});
</script>
