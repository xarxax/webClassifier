    <!-- A11y events -->
    <script type="text/javascript">
        (function () {
            var containerEl = document.querySelector('.newsletter');
            containerEl.className = 'newsletter active';
            containerEl.setAttribute('aria-hidden', false);

            var btnEl = document.querySelector('.newsletter > .mobile-close-btn');
            btnEl.addEventListener('click', function () {
                containerEl.className = 'newsletter';
                containerEl.setAttribute('aria-hidden', true);
            })

            document.addEventListener('keypress', function (e) {
              if (e.keyCode === 27) {
                containerEl.className = 'newsletter';
                containerEl.setAttribute('aria-hidden', true);
              }
            })
        })();
    </script>
