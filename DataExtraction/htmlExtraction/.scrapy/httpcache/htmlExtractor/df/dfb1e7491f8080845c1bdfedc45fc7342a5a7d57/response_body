     <script src="js/classie.js"></script>

    <script>
      function init() {
          window.addEventListener('scroll', function(e){
              var distanceY = window.pageYOffset || document.documentElement.scrollTop,
                  shrinkOn = 40,
                  header = document.querySelector("body");
              if (distanceY > shrinkOn) {
                  classie.add(header,"smaller");
              } else {
                  if (classie.has(header,"smaller")) {
                      classie.remove(header,"smaller");
                  }
              }
          });
      }
      window.onload = init();
  </script>
  <!-- Browser Detection -->
  <script type="text/javascript">

          $(document).ready(function () {
              var UserAgent = navigator.userAgent;

              if (UserAgent.match(/Trident/i)) { $('body').addClass('IE'); }
              else if (UserAgent.match(/Safari/i)) {
                  if (UserAgent.match(/Chrome/i)) {
                      $('html').css('-webkit-print-color-adjust', 'exact');
                      $('body').addClass('Chrome');
                  }
                  else { $('body').addClass('Safari'); }
              }
              else if (UserAgent.match(/Firefox/i)) { $('body').addClass('Firefox'); }
              else { }
          });
  </script>

  <!-- Device Detection -->
  <script type="text/javascript">
          $(function () {

              var isMobile = {
                  Android: function () { return navigator.userAgent.toLocaleLowerCase().match(/android/i); },
                  BlackBerry: function () { return navigator.userAgent.toLocaleLowerCase().match(/blackberry/i); },
                  iPhone: function () { return navigator.userAgent.toLocaleLowerCase().match(/iphone/i); },
                  iPad: function () { return navigator.userAgent.toLocaleLowerCase().match(/ipad/i); },
                  iPod: function () { return navigator.userAgent.toLocaleLowerCase().match(/ipod/i); },
                  Opera: function () { return navigator.userAgent.toLocaleLowerCase().match(/opera mini/i); },
                  Windows: function () { return navigator.userAgent.toLocaleLowerCase().match(/iemobile/i); },
                  Safari: function () { return navigator.userAgent.toLocaleLowerCase().match(/mobile safari/i); }
              };

              var bodyClass = (isMobile.Android() ? "android" : (isMobile.BlackBerry() ? "blackberry" : (isMobile.iPhone() ? "iphone" : (isMobile.iPad() ? "ipad" : (isMobile.iPod() ? "ipod" : (isMobile.Opera() ? "opera" : (isMobile.Windows() ? "iemobile" : "mobilesafari")))))));
              $("body").addClass(bodyClass);

              // Adding IOS Detection 
              if( isMobile.iPad() || isMobile.iPhone() || isMobile.iPad() )
              {

              }
          });
      </script>


