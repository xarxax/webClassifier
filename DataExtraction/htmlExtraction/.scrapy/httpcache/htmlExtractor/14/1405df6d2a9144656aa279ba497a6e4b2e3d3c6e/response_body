   <script type="text/javascript">
      (function () {
         var getQueryStringParm = function (name) {
            var url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
         };

         var source = getQueryStringParm("source");
         if (source != null && source.length > 0) {
            document.cookie = "source=" + source + "; expires=Tue, 05 Feb 2019 01:05:46 UTC";
         }
      })();

      //Changes Academics nav text in location pages to Our Programs per user story 55837
      $( document ).ready(function() {
          $("#local-primary-nav li a:contains('Academics')").html("Our Programs");

          $(document).ready(localNavTopLink);
          $(window).on('resize',localNavTopLink);

          function localNavTopLink() {
              if ($(window).width() < 1224) {
                  $("a.local-header-primary__link").removeAttr("href");
              }
          }
         
          
      });
   </script>
