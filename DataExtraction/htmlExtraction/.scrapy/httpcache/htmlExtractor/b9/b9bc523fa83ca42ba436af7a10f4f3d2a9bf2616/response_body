                var countries = ["ar","br","cl","co","ec","it","mx","pa","tr","us"];

                
                    var locationRedirect = true;
            function getgeoip( country){
                for( i in countries){
                    if( countries[i] == country ){
                        if( country == 'it')window.location.href = '/local-treviso/cities/display';
                        else window.location.href = '/countries/display/' + country;
                        break;
                    }
                }
            }
