 <script type="text/javascript">

function checkform()
 {
 
 var msg="";
 var frm=document.newsletter;
 var emailFilter = /^[^@]+@[^@.]+\.[^@]*\w\w$/ ;
    var illegalChars= /[\(\)\<\>\,\;\:\\\"\[\]]/ ;
 
 
 
  if(frm.email)
 {  
 if(frm.email.value=="")
  {
   frm.email.style.border = '1px solid red';
   msg=msg + "Please Enter Email.\n";
   alert(msg);
   return false;
  } 
 else if (!frm.email.value.match(emailFilter))
 {
 frm.email.style.border = '1px solid red';
 msg=msg + "Please Enter Valid Email.\n";
 alert(msg);
 return false;
 }
 
 else if (frm.email.value.match(illegalChars))
 {
 frm.email.style.border = '1px solid red';
 msg=msg + "The Email Address Contains Illegal Characters.\n";
 alert(msg);
 return false;
 }
  
 } 
 
 else{
  frm.email.style.border = '1px solid #4884D6';

 }
 return true;  
 }
 </script>



