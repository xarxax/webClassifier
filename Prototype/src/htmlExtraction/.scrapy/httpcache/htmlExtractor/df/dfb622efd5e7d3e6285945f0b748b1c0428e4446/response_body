function newImage(arg) {
	if (document.images) {
		rslt = new Image();
		rslt.src = arg;
		return rslt;
	}
}

function changeImages() {
	if (document.images && (preloadFlag == true)) {
		for (var i=0; i<changeImages.arguments.length; i+=2) {
			document[changeImages.arguments[i]].src = changeImages.arguments[i+1];
		}
	}
}

var preloadFlag = false;
function preloadImages() {
	if (document.images) {
		topbar_02_topbar_05_over = newImage("images/topbar_02-topbar_05_over.gif");
		topbar_03_topbar_05_over = newImage("images/topbar_03-topbar_05_over.gif");
		topbar_04_topbar_05_over = newImage("images/topbar_04-topbar_05_over.gif");
		preloadFlag = true;
	}
}

