<script type="text/javascript">
$(document).ready(function() {
	$('#home-carousel ul').cycle({
	    fx:     'fade',
	    speed:  'fast',
	    timeout: 0,
	    speed:  1000,
	    timeout: 2500,
	    next:   '.home-carousel-next',
	    prev:   '.home-carousel-previous',
	    containerResize: false,
  		slideResize: false,
  		fit: 1
	});

	// timeouts per slide (in seconds)
	var timeouts = [26,8,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,20,1];
	function calculateTimeout(currElement, nextElement, opts, isForward) {
    	var index = opts.currSlide;
    	return timeouts[index] * 100;
	}

	$('#welcome div.tagline ul').cycle({
	    fx: 'fade',
	    speed:  200,
	    //timeout: 100,
	    cleartypeNoBg: true,
	    containerResize: false,
  		slideResize: false,
  		nowrap: true,
  		timeoutFn: calculateTimeout,
  		fit: 1,
  		end: function() { $('div#welcome').addClass('slideshow-done'); }

	});
});
</script>

