                $('#thumbnail-slider li').removeClass('active');
                $(this).addClass('active');
                var $data_slide = $('#thumbnail-slider li.active').next().data('slide');
                $('#ninja-slider li').fadeOut(400);
                $("#ninja-slider li[data-slide=" + $data_slide + "]").hide().fadeIn(400);

                var index = $(this).index() + 1;
                for (var i = 0; i < index; i++) {
                    var $li_html = $(document).find('#thumbnail-slider li').eq(i).clone();
                    $(document).find('#thumbnail-slider li').eq(i).addClass("removing")
                    $(document).find('#thumbnail-slider ul').append($li_html);
                }
                $top_shift -= $('#thumbnail-slider li.active').height() * index;
                $('#thumbnail-slider ul').animate(
                    {
                        'top': $top_shift
                    },
                    {
                        complete: function () {
                            $(document).find('#thumbnail-slider li.removing').remove();
                            $('#thumbnail-slider ul').css('top', 0);
                            $top_shift = 0;
                        }
                    }
                )
            }
            btn_click = false;
            startCustomSlider();
        })

        //start slider
        startCustomSlider();

        //up click
        $('#up-xs').on('click touchstart', function (e) {
            //alert();
            e.stopPropagation();
            if (!btn_click) {
                btn_click = true;
                clearInterval($interval);
                $top_shift -= $('#thumbnail-slider li.active').height();
                //$('#thumbnail-slider li.active').next().addClass('active');
                $('#thumbnail-slider li.active').eq(0).removeClass('active');
                var $li_html = $('#thumbnail-slider li').eq(0).clone();
                var $data_slide = $('#thumbnail-slider li').eq(1).data('slide');
                console.log($data_slide);
                $('#thumbnail-slider ul').animate({
                    'top': $top_shift
                }, {
                    complete: function () {
                        $('#thumbnail-slider li').eq(0).remove();
                        $('#thumbnail-slider li').eq(0).addClass('active');
                        $('#thumbnail-slider ul').append($li_html);
                        $('#thumbnail-slider ul').css('top', 0);
                        $top_shift = 0;
                        btn_click = false;
                        startCustomSlider();
                    }
                })
                $("#ninja-slider li:not([data-slide=" + $data_slide + "])").fadeOut(400);
                $("#ninja-slider li[data-slide=" + $data_slide + "]").hide().fadeIn(400);
            }

        });

        //down click
        $('#down-xs').on('click touchstart', function (e) {
            e.stopPropagation();
            if (!btn_click) {
                btn_click = true;
                clearInterval($interval);
                $top_shift -= $('#thumbnail-slider li:last-child').height();
                var $li_html = $('#thumbnail-slider li:last-child').clone();
                $('#thumbnail-slider li:last-child').remove();
                $('#thumbnail-slider ul').prepend($li_html);
                $('#thumbnail-slider ul').css('top', $top_shift);
                var $data_slide = $('#thumbnail-slider li').eq(0).data('slide');
                $('#thumbnail-slider li').removeClass('active');
                $('#thumbnail-slider ul').animate({
                    'top': 0
                }, {
                    complete: function () {
                        $('#thumbnail-slider li').eq(0).addClass('active');
                        $('#thumbnail-slider ul').css('top', 0);
                        $top_shift = 0;
                        btn_click = false;
                        startCustomSlider();
                    }
                })
                $("#ninja-slider li:not([data-slide=" + $data_slide + "])").fadeOut(400);
                $("#ninja-slider li[data-slide=" + $data_slide + "]").hide().fadeIn(400);
            }
        })

        //next click
        $('#next-xs').on('click touchstart', function () {
            $('#down-xs').click();
        })

        //prev click
        $('#prev-xs').on('click touchstart', function () {
            $('#up-xs').click();
        })

    })
</script>

