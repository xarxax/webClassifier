<script>
    $(document).ready(function () {
        AppendCategories();
    });
    function AppendCategories() {
        var subCatUrl = '/SubCategory' + '?catId=';
        $.ajax({
            url: '/Category/GetCategoryNames',
            data: {},
            type: 'GET',
            success: function (data) {
                $(".productsMenu").html("");
                $.each(data, function (index, value) {
                    $(".productsMenu").append("<li><a href='" + subCatUrl + value.Id + "'>" + value.Name + "</a></li>");

                });
            }
        });
    }
</script>
