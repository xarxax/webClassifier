    </script>


<script type="text/javascript">
    $(document).ready(function() {
        $('html, body').hide();

		console.log(window.location.hash);

        if (window.location.hash) {
            setTimeout(function() {
                $('html, body').scrollTop(0).show();
                $('html, body').animate({
                    scrollTop: $(window.location.hash).offset().top
                    }, 1000)
            }, 0);
        }
        else {
            $('html, body').show();
        }
    });
</script>

</body>
</html>
