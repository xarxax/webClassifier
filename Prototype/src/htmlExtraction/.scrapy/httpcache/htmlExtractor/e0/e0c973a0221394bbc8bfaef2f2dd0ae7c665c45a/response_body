        $('.external-video-colorbox').colorbox({innerWidth:'640px', innerHeight:'390px', iframe:true});
        $('.internal-video-colorbox').colorbox({innerWidth:'640px', innerHeight:'390px', inline:true, href:$(this).attr('href')});
        $('.gallery-colorbox, .max-colorbox').colorbox({maxWidth:'90%', maxHeight:'90%'});
        /*$('.ebook-colorbox').colorbox({inline:true, href:function() {
                return $(this).attr('href')}
        });*/
        $('.ebook-colorbox').colorbox({innerWidth:'90%', innerHeight:'90%', iframe:true});
        $(window).on("resize", function(){
            if ($('.ebook-colorbox, .max-colorbox, .gallery-colorbox').length > 0) {
                $.fn.colorbox.resize({
                    height: "90%",
                    width: "92%"
                });
            }
        });
        
        $('.side-box-container .left-registration-box .register a').bind('click', function(e) {
            e.preventDefault();
            $('#ace-20-tab-1').fadeOut( 800, function() {
                $('#ace-20-tab-2').fadeIn(300);
            });
        });
        $('.page-ace-20 .button-back-speakers a').bind('click', function(e) {
            e.preventDefault();
            $('#ace-20-tab-2').fadeOut( 800, function() {
                $('#ace-20-tab-1').fadeIn(300);
            });
        });
        
        /*if ($('.inside-menu').length > 0) {
            var menuWidth = $('.inside-content').innerWidth();
            var menuItems = $('.inside-menu li').size();
            var itemWidth = (menuWidth/menuItems); /* -2 if left/right border 
            $('.inside-menu').css({'width': menuWidth +'px'});
            $('.inside-menu a').css({'width': itemWidth - $('.inside-menu li a').css('padding-left').replace(/[^-\d\.]/g, '') - $('.inside-menu li a').css('padding-right').replace(/[^-\d\.]/g, '') + 'px'});
        }*/
        
        var bulletWidth = 0;
        $('.bx-pager .bx-pager-item').each(function(e) {
            bulletWidth += $(this).outerWidth();
        });
        $('.bx-pager').css('width',bulletWidth);
        
        if ($('.inside-content').children('.third-navigation').length > 0) {
            $('.inside-content h1').css('padding-top','25px');
        }
        
        $('.current-month').accordion({header:'.question-header'});
        $('.other-months').accordion({header:'.question-header', active:false, collapsible:true});
        

        
        
        if (jQuery(".display_archive").length) {
        	// newsletter, fix date format
        
        	jQuery('.campaign').each(function (index, value) {
        		var $this = $(this);
        
        		var text = $this.contents().filter(function () {
        			return this.nodeType == Node.TEXT_NODE;
        		}).text();
        
        		text = text.replace("-", "");
        		text = jQuery.trim(text);
        
        		var date = new Date(text);
        		date =  date.getDate() + '/' + (("0" + (date.getMonth() + 1)).slice(-2)) + '/' +  date.getFullYear();
        
        		date = date + ' - ';
        		$this.contents().first()[0].textContent = date;
        
        	});
        
        }
        
    });
    
    $(window).load(function() {
    
        $('.videos-list li, .video-block').each(function() {
            var $this = $(this);
            $this.children('.icon-video').append('<div class="play-icon" />');
            $('.play-icon').css('top',($this.height() - $this.find('span').height())/2);
        });
        $('.home-news-list li').each(function() {
            var newsItem = $(this);
            var newsWidth = newsItem.width();
            var thumbnailWidth = newsItem.children('.thumbnail').outerWidth() + 15;
            $(this).children('.content-large').css('width',newsWidth - thumbnailWidth);
        });
    
    });
</script>
