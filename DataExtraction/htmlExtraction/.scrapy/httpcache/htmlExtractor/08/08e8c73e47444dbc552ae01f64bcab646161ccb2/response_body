    <script>
        function closeModal() {
            document.getElementById('aegOverlay').style.display = "none";
            document.getElementById('overlayBackground').style.display = "none";
        }

        function DivDisplayToggle(id, input, parentdiv) {
            resetChildButtons();
            ButtonToggle(id);
            var str1, str2;
            var mirrordiv = "no";
            var childname = parentdiv + "Child";
            var children = document.getElementsByClassName(childname);

            for (var i = 0; i < children.length; i++) {
               closeChildren(children[i].id,id);
            }

            str1 = input.substr(input.indexOf("yes"), 3);
            if (str1 != "yes")
            {
                str1 = "no";
                mirrordiv = "yes";
            }

            str2 = input.substr(str1.length, (input.length - str1.length));
            mirrordiv += str2;
            document.getElementById(mirrordiv).style.display = "none";
            document.getElementById(input).style.display = "block";
        }

        function closeChildren(childname, sourceid) {
            var childclass = childname + "Child";
            var divs = document.getElementsByClassName(childclass);

            for (var i = 0; i < divs.length; i++) {
                var div = divs[i];
                document.getElementById(div.id).style.display = "none";

                if (div.getAttribute("data-haschild") == "true") {
                    closeChildren(div.id);
                }
            }
        }

        function ButtonToggle(id) {
            var button = document.getElementById(id);
            var mirrorbutton;

            if (button.getAttribute('data-isactive') == "false") {
                button.setAttribute('data-isactive',"true");
                button.style.background = "#005996";
                button.style.color = "white";
                ToggleOpposite(id,"#f2f2f2");
            }
        }

        function ToggleOpposite(id, mirrorcolour) {
            var boxId = parseInt(id);
            console.log("Mirrorcolour is : " + mirrorcolour);
            var mirrorBox;
            var mirrorId;
            if ((boxId % 2) == 0) {
                mirrorId = boxId-1;
                console.log(mirrorId);
                mirrorBox = document.getElementById(mirrorId);
                mirrorBox.style.background = mirrorcolour;
            }

            else {
                mirrorId = boxId+1;
                console.log(mirrorId);
                mirrorBox = document.getElementById(mirrorId);
                mirrorBox.style.background = mirrorcolour;
            }

            if (mirrorcolour == "#f2f2f2") {
                document.getElementById(mirrorId).style.color = "#114f8e";
                mirrorBox.setAttribute("data-isactive", "false");
            } else {
                document.getElementById(mirrorId).style.color = "white";
                mirrorBox.setAttribute("data-isactive", "true");
            }
        }

        function resetChildButtons() {
            for(var i = 3; i < 7; i++) {
                var box = document.getElementById("" + i);
                console.log(box);
                box.setAttribute('data-isactive', "false");
                box.style.background = "#f2f2f2";
                box.style.color = "#114f8e";
            }
        }
        
    </script>



