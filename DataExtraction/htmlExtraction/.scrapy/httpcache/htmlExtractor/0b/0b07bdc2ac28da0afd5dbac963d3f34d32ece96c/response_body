<script type="text/javascript" language="javascript">
$(document).ready(function() {	
									
	$(".slideshow img").fadeOut(0);
	$(".slide_1").fadeIn(0);
	$('.tabs div').click(function() {
		current = $(this).attr("id").split("_")[1];
		clearInterval(rotating);
		homeRotator();
	});
	
	current = 2;
	rotating = setInterval(homeRotator,5000);
	function homeRotator() {
		$(".slideshow img").fadeOut();						
		$(".slideshow .slide_" + current).fadeIn();
		$(".tabs .active").removeClass('active');
		$("#tab_" + current).addClass('active');		
		current = current<4?current+1:1;
	}
	
	$(".info").css({overflow:"hidden"});
	$(".info").css({height:0,padding:0});
	$(".news p span").disableSelection();
	
	$(".news p").live("click",function() {
		if($(this).is(".closed")) {
			$(".opened").removeClass("opened").addClass("closed");
			$(this).removeClass("closed").addClass("opened");
			$(".news div.info").each(function() {
				if($(this).parents(".news").find("p").is(".closed")) {
					$(this).animate({height:0,padding:0});
					//if(navigator.userAgent.indexOf("Safari")>0) { 
					$(this).find("*").css({visibility:"hidden"});
//					}
				} else {
					$(this).animate({height:153});
					//$(this).find("*").css({visibility:"visible"});
					//if(navigator.userAgent.indexOf("Safari")>0) { 
					$(this).find("*").css({visibility:"visible"}); 
					//}					
				}
			});
		}
		$(".view").fadeTo("fast",1);
		$(".opened .view").fadeTo("fast",.5);
	});
	
	$(".firstAccordion").click();	
	
});
</script>

