    <script type="text/javascript">
    function setCookie(c_name,value,exdays) {
        var exdate=new Date();
        exdate.setDate(exdate.getDate() + exdays);
        var c_value=escape(value) + ((exdays==null) ? "" : "; expires="+exdate.toUTCString());
        document.cookie=c_name + "=" + c_value;
    }
    function getCookie(c_name) {
        var c_value = document.cookie;
        var c_start = c_value.indexOf(" " + c_name + "=");
        if (c_start == -1) {
            c_start = c_value.indexOf(c_name + "=");
        }
        if (c_start == -1) {
            c_value = null;
        }
        else {
            c_start = c_value.indexOf("=", c_start) + 1;
            var c_end = c_value.indexOf(";", c_start);
            if (c_end == -1) {
                c_end = c_value.length;
            }
            c_value = unescape(c_value.substring(c_start,c_end));
        }
        return c_value;
    }
    var isOpen = false;
    var scrolledFarEnough;
    var bottomOffset = 600;
    var scrolled = false;
    var reachedTheBottom = false;
    var closedByUser;
    var stayClosedPlease = getCookie("closed");
    if (stayClosedPlease != null && stayClosedPlease != "") {
        closedByUser = true;
    } else {
        closedByUser = false;
    }
    /* close popup when user clicks close button listener */
    $(function() {
        $('img#closePopup').click(function(){
            closedByUser = true;
            setCookie("closed","1",2);
            $("#interstitial").animate({ right: "-600px" }, "slow");
            isOpen = false;
        });
    });
    $(window).scroll(function () {
        if (!scrolled) {
            scrolled = true;
        }
        scrolledFarEnough = $(window).scrollTop() + $(window).height() > $(document).height() - bottomOffset;
        if (referencesVisible() && isOpen == false && ( ! closedByUser )) {
            $("#interstitial").animate({ right: "0px" }, "slow");
            isOpen = true;
            if (!reachedTheBottom) {
                reachedTheBottom = true;
            }
        }
        if (!referencesVisible() && isOpen == true) {
            $("#interstitial").animate({ right: "-600px" }, "slow");
            isOpen = false;
        }
    });
    function referencesVisible() {
        return hasScrolledPassedStartOfElement("#content-bottom");
    }
    function hasScrolledPassedStartOfElement(elem) {
        var docViewTop = $(window).scrollTop();
        var docViewBottom = docViewTop + $(window).height();
        var elemTop = $(elem).offset().top;
        return docViewBottom >= elemTop - ($("#content").height() * .5);
    }
</script>
