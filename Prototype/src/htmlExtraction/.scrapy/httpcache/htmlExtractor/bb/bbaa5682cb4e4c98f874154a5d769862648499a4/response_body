				<script type="text/javascript">
  function Form_Validator(theForm)
  {
	
	
    if (theForm.Name.value == "")
    {
      alert(" \"姓名\" 未填寫 。");
      theForm.Name.focus();
      return (false);
    }

	 if (theForm.Email.value == "")
    {
      alert(" \"電子郵件\" 未填寫。");
      theForm.Email.focus();
      return (false);
    }
    
    if (theForm.Email.value.search(/^[\w-]+(\.[\w-]+)*@[\w-]+(\.[\w-]+)+$/)==-1) 
    {
      alert(" \"電子郵件\" 格式錯誤。");
      theForm.Email.focus();
      return (false);
    }

	 if (theForm.PostAuthCode.value == "")
    {
      alert(" \"驗証碼\" 未填寫。");
      theForm.PostAuthCode.focus();
      return (false);
    }
	
    
    theForm.submit();
  }
</script>
