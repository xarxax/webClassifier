			$(document).ready(function() {
				
				$('#mainnav ul').accordion({ 
				    autoheight: false, 
				    header: '.head', 
				    navigation: true
				});

				var srcimg = $("#navimg").attr("src");
				$("#mainnav a").hover(function() {
					var slug = $(this).attr("href").substring(1);
					if (slug == '') {
						slug = 'index';
					}
					var newimg = "/images/page/" + slug + ".jpg";
					
					$.ajax({
						url:newimg,
						type:'HEAD',
						success:
							function(){
								$("#navimg").attr("src",newimg);
							}
					});
		
				},
				function() {
					$("#navimg").attr("src",srcimg);
				});
				if ($('#mainnav').height() < $('#main').height()) {
					$('#mainnav').height($('#main').height());
				};
				if ($('#sidebar').height() + 55 < $('#content').height()) {
					$('#sidebar').height($('#content').height()-55);
				};

			$(".lightbox").fancybox();

			
			});
		</script>

