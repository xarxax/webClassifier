<script>
$(function() {
	$('form[id="mailing"]').submit(function() {
		var $this = $(this);
		var empty = false;
		
		var $i = $this.find('select, input[type!="hidden"]');
		$.each($i, function(i,e) { 
			if($(e).val() == '') {
				$(e).addClass('invalid');
				empty = true;
				console.log($(e).attr('name'));
			} else {
				$(e).removeClass('invalid');				
			}
		});
		
		if($(this).find('.invalid').length > 0 || empty) {
			alert('Please fill in all the fields.');
			return false;	
		} else {
			return true;
		}
	});
});
</script>

