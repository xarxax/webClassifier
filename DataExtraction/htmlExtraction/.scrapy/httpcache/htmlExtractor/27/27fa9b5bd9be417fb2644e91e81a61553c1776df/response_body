			function closeAll(blocks) {
				//alert("test");
				// loop through lists and close the ones that are open (if any)
				$(blocks).each(function( index ) {
				//console.log( index + ": " + $( this ).text() );
					//alert($(this).outerWidth());
					if ( $(this).outerWidth() != listWidth ) {
						closeSlider( $(this) );
					}
				});
					
			}
			
			
			
			function closeSlider(block) {
				
				// fade out...
				block.find("ul").fadeOut(400, function(){
				
					if ( block.is(':last-child') ) {
						$(CatList).first().delay(400).animate ({
							width: listWidth + 'px'
						});
					}
					else {
						$(CatList).last().delay(400)
						.animate ({
							width: listWidth + 'px'
						},function(){
							$(this).children("div.shadow").fadeIn();
						});	
					}
					// animate the current list
					$(block).find("a.slider").addClass("arrow");
					block.delay(400).animate( {
						width: listWidth + 'px'
						
					},function(){
						// fade in
						$(block).find("ul").fadeIn();	
					});
					$(block).find("ul").removeClass("expand");
					$(block).find("ul li.intro").css("display","none");
					$(block).find("ul li.intro").prev("li").css({ "display" : "inline-block", "width" : "100%" });
					$(block).find("a.close").fadeOut();
					
					
					return false;
				});
			}
			
			
			function openSlider(block) {
				// fade out...
				var crankWidth = 240;
				block.find("ul").fadeOut(400, function(){
					
					var firstWidth = "51%";
					var secondWidth = "49%";
				
					if ( (block).hasClass("RSP") ) {
						var firstWidth = "57%";
						var secondWidth = "43%";	
					}
				
				
					if ( block.is(':last-child') ) {
							
						$(CatList).first().delay(400).animate ({
							// width 4 lists
							width: '0px'
							
							// width 3 lists
							//width: listWidth - 180 + 'px'
						});
						
					}
					else {
						$(CatList).last().delay(400).animate ({
							// with 4 lists
							width: '0px'
							// with just 3 lists
							//width: listWidth - 180 + 'px'
						},function(){
							//$(this).children("div.shadow").fadeOut();
						});	
					}
					// animate the current list
					
					$(block).find("a.slider").removeClass("arrow");
					
					block.delay(400).animate( {
						width: listWidth + listWidth + 'px'
						
					},function(){
						// fade in
						$(block).find("ul").fadeIn();	
					});
					$(block).find("ul").addClass("expand");
					$(block).find("ul li.intro").css({ "display" : "inline-block", "width" : firstWidth });
					$(block).find("ul li.intro").prev("li").css({ "display" : "inline-block", "width" : secondWidth });
					$(block).find("a.close").fadeIn();
					//$(block).find("ul").fadeIn();
				/*
				,200,function(){
						$(this).find("ul").addClass("expand");
						$(this).find("ul li.intro").css("display","inline-block");
						$(this).find("a.close").fadeIn();	
					});
				
				*/
				
				});
				
			}
		</script>

    </body>
