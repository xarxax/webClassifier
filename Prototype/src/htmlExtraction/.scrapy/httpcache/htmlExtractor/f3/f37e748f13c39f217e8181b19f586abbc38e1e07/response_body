	$(document).ready(function(){
		$(window).scroll(function(){
			checkStickyPos();
		});
	});

	function checkStickyPos() {
		if ($('#sticky').css('position') == 'fixed')
		{
			$('#product_section').css({position: 'fixed', top: '50px'});
		}
		else
		{
			$('#product_section').css({position: 'absolute', top: 'auto'});
		}
		
	}
	</script>
