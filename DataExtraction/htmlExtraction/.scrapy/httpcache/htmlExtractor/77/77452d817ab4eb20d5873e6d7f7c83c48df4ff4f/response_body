    var id,pause=0,position=0;
    function ticker() {
      var i,k,msg=" Welcome to InfO-Optic, a premier software to manage small optical -  patient information, presciptions, payments, recalls.";
      k=(100/msg.length)+1;
      for(i=0;i<=k;i++) msg+=" "+msg;
      document.form2.ticker.value=
                    msg.substring(position,position+100);
      if(position++==80) position=0;
      id=setTimeout("ticker()",1000/10); 
    }
    function action() {
      if(!pause) {
        clearTimeout(id);
        pause=1; 
      }
      else {
        ticker();
        pause=0; 
      }
    }
