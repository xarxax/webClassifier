  function carousel5() {
    var c;
    var d = document.getElementsByClassName("mySlides5");
    for (c = 0; c < d.length; c++) {
      d[c].style.display = "none"; 
    }
    slideIndex5++;
    if (slideIndex5 > d.length) {slideIndex5 = 1} 
    d[slideIndex5-1].style.display = "block"; 
