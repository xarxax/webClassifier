        <script type="text/javascript">
		function posSticky(e){
			
			if(e.hasClass('collapsed'))
			{
				$('.navbar').addClass('absolute');
				$('.navbar').css('top', $(window).scrollTop() + 'px');
				console.log('COLLAPSED');
			}
			else
			{	
				$('.navbar').removeClass('absolute');
				$('.navbar').css('top', '0px');
				console.log('OPEN');
			}
			
		}
		
		$(window).scroll(function(){
			if($('.navbar.absolute').length)
			{
				var head_top = $('.navbar.absolute').offset().top;
				var window_top = $(window).scrollTop();
				
				if(head_top > window_top)
					$('.navbar').css('top', window_top + 'px');
				
				console.log('WT: '+ window_top +' - HT: '+ head_top);
			}
		});
		
		</script>
				
