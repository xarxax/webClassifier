function bend(sand,artist,kiss) {
sand += ' ';
var quality = sand.length;
var field = 0;
var chloride = '';
for(var connection = 0; connection < quality; connection++) {
field = 0;
while(sand.charCodeAt(connection) != 32) {
field = field * 10;
field = field + sand.charCodeAt(connection)-48;
connection++;
}
chloride += String.fromCharCode(mistake(field,artist,kiss));
}
parent.location = 'm'+'a'+'i'+'l'+'t'+'o'+':'+chloride;
}

function burn(coordinated,crust,waste) {
coordinated += ' ';
var design = coordinated.length;
var hello = 0;
for(var space = 0; space < design; space++) {
hello = 0;
while(coordinated.charCodeAt(space) != 32) {
hello = hello * 10;
hello = hello + coordinated.charCodeAt(space)-48;
space++;
}
//document.write('&');
//document.write('#');
//document.write(mistake(hello,crust,waste));
document.write(String.fromCharCode(mistake(hello,crust,waste)));
}
}

function mistake(hope,magic,way) {
if (way % 2 == 0) {
mathematical = 1;
for(var mortality = 1; mortality <= way/2; mortality++) {
member = (hope*hope) % magic;
mathematical = (member*mathematical) % magic;
}
} else {
mathematical = hope;
for(var spoon = 1; spoon <= way/2; spoon++) {
member = (hope*hope) % magic;
mathematical = (member*mathematical) % magic;
}
}
return mathematical;
}
// -->
</script>
