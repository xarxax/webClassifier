<script src="js/mailing.js"></script> 
<script type="text/javascript">

    $(document).ready(function() {
	
	$('#signup1').click(function(){
	
        var email = $('#header_mailinglist input').val();

        if(!isValidEmailAddress(email)) {
            alert('Email address not valid');
            return false;
        }
        
        $.get('mailing_list.php', 
        	{email: email}, 
        	function(data) {
        		if(data=='-1')
        		    return false;
		
                $('#signup1').animate({'opacity': 0}, 1000, function(){
                    $(this).css({width: '71px',
                            height: '27px'});
                    $(this).html('');
                });

                $('#email_area').animate({'opacity': 0}, 1000, function(){
                    $(this).html('<br /><span class="thanks">Thanks!<br />Your email address has been added to our list.</span>');
                    $(this).animate({'opacity': 1}, 1000);
                });
		    
        	}
        );
				
	   
	});                  
	
	
});
</script>



  	   	  	
