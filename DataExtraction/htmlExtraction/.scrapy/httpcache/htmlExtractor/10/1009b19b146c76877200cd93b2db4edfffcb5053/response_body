<script>
	function galleryHeight(){
		$('.gallery').css({
			'height': ($(window).outerHeight(false) * .75) + 'px'
		});
	}
	$(function(){
		galleryHeight();
		$('.gallery .slides').slick({
			arrows: true,
			autoplay: false,
			prevArrow: '.gallery .arrow.prev',
			nextArrow: '.gallery .arrow.next'
		});
		
		$(window).resize(function(){
			galleryHeight();
		});
	});
</script>
