            $(document).ready(function() { 

                /* ++++++++++++ 
                Style Switch
                ++++++++++++ */

                if($.cookie("css")) { 
                    $("link.mobile2full").attr("href",$.cookie("css"));
                };
                
                $(".fullSiteButton").click(function() { 
                    $("link.mobile2full").attr("href",$(this).attr('rel'));
                    $.cookie("css",$(this).attr('rel'), {expires: 365, path: '/'});
                    return false;
                }); 

                /* ++++++++++++ 
                Map Slider
                ++++++++++++ */

                $(".buttonMap").click(function () {
                    $("#mapPopup").toggle();
                    displayMap();
                    return false;
                });


