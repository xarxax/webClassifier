            <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDDgFLrd-NXr00Lps47ZB9bqsIkaQsqkwU&sensor=true"></script>

          <script>
                function displayMap() {
                            /* document.getElementById('mapPopup').style.display="block";*/
                            initialize();
                        }
                 function initialize() {
                  // create the map
            
                    var location = new google.maps.LatLng(30.494193, -90.105306); 

                    var mapOptions = {
                      center: location,
                      zoom: 15,
                      mapTypeId: google.maps.MapTypeId.ROADMAP
                    };

                    var map = new google.maps.Map(document.getElementById("mapPopup"),
                        mapOptions);

                    google.maps.event.addDomListener(window, 'load', initialize);
                    google.maps.event.trigger(map, 'resize');
                   var marker = new google.maps.Marker({
                    position: location,
                    map: map,
                    title:"A All Bail Bonds LLC"
                   });

                }

        </script>


  

    
