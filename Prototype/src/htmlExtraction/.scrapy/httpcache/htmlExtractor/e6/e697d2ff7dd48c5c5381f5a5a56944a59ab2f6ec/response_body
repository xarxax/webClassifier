<script type="text/javascript">
$(function() {
	loadWikiData();
});

function loadWikiData() {
	var wikilinktokens = 'http://en.wikipedia.org/wiki/Thomas_Mann'.split('/');
	var searchTerm = wikilinktokens[wikilinktokens.length -1];
	var url="http://en.wikipedia.org/w/api.php?action=parse&format=json&page="+searchTerm+"&redirects&prop=text&callback=?";
	var infobox = null;
	var blurb = null;
	var htmlData = '';
	$.getJSON(url, function(data) {
		if(null == data.error) {
			wikiHTML = data.parse.text["*"];
			$wikiDOM = $("<document>"+wikiHTML+"</document>");
			infobox = $wikiDOM.find('.infobox').html();
			blurb = $wikiDOM.find('table').nextUntil("div","p");
		}
		console.log(infobox);
		if(infobox != null && infobox != 'undefined') {
	 		$("#infobox").html('<table class="table table-bordered table-striped wikiinfobox table-responsive">'+absoluteWiki(infobox)+'</table>');
	 		$("#infobox>table>tbody>tr>td.label").removeClass("label");
		} else {
	 		$("#wikitext").removeClass('col-md-7');
	 		$("#wikitext").addClass('col-md-12');
	 		$("#infobox").html('');
	 	}
	 	if(blurb != null && blurb != 'undefined') {
	 		$.each(blurb, function (key, data) {
				$.each(data, function (index, data) {
			        if(index == 'outerHTML') {
			        	htmlData = htmlData + data;
			        }
			    })
			})
			$("#wikitext").html(absoluteWiki(htmlData));
	 	}
	});
}

function absoluteWiki(data) {
	return data.replace(/href="\/wiki/g, 'href="http://en.wikipedia.org/wiki');
}

$(document).on('click', '.summary-toggle', function() {
	var id = $(this).data('id');
	var elem = $('#annotation-summary-' + id);
	//elem.toggle();
	if (elem.is(':visible')) {
		elem.addClass('hide');
		$( this ).html('<i class="icon-plus"></i> Show more');
	}
	else {
		elem.removeClass('hide');
		$( this ).html('<i class="icon-minus"></i> Show less');
	}
});
$(function () {
  $('[data-toggle="tooltip"]').tooltip();
})

function tcob() {
	location.href = '#top';
	$('[data-toggle="tooltip"]').tooltip();
}

</script>
