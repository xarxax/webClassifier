<link rel="stylesheet" href="css/responsiveslides.css">
<script>
function getwidth() {
	if (document.body && document.body.offsetWidth) {
	   winW = document.body.offsetWidth;
	  }
	  if (document.compatMode=='CSS1Compat' &&
		  document.documentElement &&
		  document.documentElement.offsetWidth ) {
	   winW = document.documentElement.offsetWidth;
	  }
	  if (window.innerWidth && window.innerHeight) {
	   winW = window.innerWidth;
	  }
	  return winW;
}
$(document).ready(function() {
	// Determine the window size
	
  $(".banner-button").hoverIntent(
    //on mouseover
    function() {
	  var winW = getwidth();
	  var id = $(this).attr("id");
	  $(".plus-"+id).fadeOut(0,0);
	  if (winW > 650) {
		if (winW <= 900) {
		  $("#"+id).stop().animate({
			width: '99%', //adds 150px
			}, 'slow' //sets animation speed to slow
		  );
		} else {
		  $("#"+id).stop().animate({
			height: '+=240' //adds 150px
			}, 'slow' //sets animation speed to slow
		  );
		}
	  }
	  
    },
    //on mouseout
    function() {
	  var winW = getwidth();
	  var id = $(this).attr("id");
	  if (winW <= 900) {
		$("#"+id).animate({
		  width: '13.5%', //substracts 150px
		  }, 'slow'
		);
	  } else {
		$("#"+id).animate({
		  height: '-=240px' //substracts 150px
		  }, 'slow'
		); 
	  }
	  setTimeout(function(){$(".plus-"+id).fadeIn()}, 1000); 
      
    }
  );
});
</script>
