        $(document).ready(function () {
            var isMobile = {
                any: function () {
                    return ($(window).width() <= 599);
                }
            };

            var searchControl;

            // Mobile wire up
            if (isMobile.any()) {
                searchControl = $(".searchControl").eq(1);
            } else {
                searchControl = $(".searchControl").eq(0);
            }

            $(".searchControl").keydown(function (event) {
                // Enter pressed
                if (event.keyCode == 13) {
                    window.location = "/search-results?s=" + searchControl.val();
                    return false;
                }
            });

            $(".searchButton").click(function () {
                window.location = "/search-results?s=" + searchControl.val();
            });
        });
