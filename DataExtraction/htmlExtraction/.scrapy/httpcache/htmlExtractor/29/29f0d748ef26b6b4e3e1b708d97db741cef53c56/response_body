<script type="text/javascript">
$(document).ready(function() {
    $('.search-link').click(function(e) {
        e.preventDefault();
        
        if($(this).closest('li').hasClass('searchli')) {
            if($(this).next().is(':visible')) {
                $(this).next().hide();
                return;
            }
            
            $(this).next().fadeIn();
            $(this).next().find('.search-input').focus();
            return;
        }
        if($(this).next().is(':visible')) {
            $(this).find('span').fadeIn();
            $(this).next().hide();
            return;
        }
        
        $(this).next().fadeIn();
        $(this).next().find('.search-input').focus();
        $(this).find('span').hide();
    });
    
    $('.menubutton').click(function(e) {
        e.preventDefault();
        
        if($('.nav').is(':visible')) {
            $('.nav').hide();
            $(this).find('img').attr('src', '/images/mobile-menu-btn.png');
            return;
        }
        $('.nav').show();
        $(this).find('img').attr('src', '/images/mobile-menu-btn-over.png');
    });
    
    $('#concertSelect ul li a').click(function(e) {
        if($('#concertSelect ul').children(':visible').length < 2) {
            e.preventDefault();
            $('#concertSelect ul li').slideDown();
        }
    });
});
</script>
