<script type="text/javascript">
window.onresize = function(event) {
	hotSpots();
};
function hotSpots() {
	var hotspots = document.getElementById("hotspots");
	if (hotspots) {
		if (window.innerHeight<1100) {
			hotspots.style.bottom = "";
			hotspots.style.top = "512px";
		}
		else {
			hotspots.style.top = "";
			hotspots.style.bottom = "220px";
		}
	}
}
hotSpots();
