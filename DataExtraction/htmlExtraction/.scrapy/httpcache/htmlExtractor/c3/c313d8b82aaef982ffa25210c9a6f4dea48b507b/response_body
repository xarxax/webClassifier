<script type="text/javascript">
	var num = 5;
	var timeinterval = 60*1000; //Each 7 seconds
	var visible = 1;
	var interval = -1;
	var intSpeed = 3*1000;
	var imgDelay = 0;
	var speed = 800;

	$(document).ready (function(){
		startInterval();
	});

   	function startInterval () {
		interval = setInterval ('switchDoc();', timeinterval);
   	}

   	function switchDoc () {
      	oldVisible = visible;

 		visible++;
 		if (visible > num)
	    	visible = 1;
    
      	$('.page'+oldVisible).animate({
          	'opacity':0
          	}, speed, function(){
	      		$('.pages').hide();
	      		$('.page'+visible).show()
	      		$('.page'+visible).css('opacity', 0);
	      		$('.page'+visible).animate({
	      			'opacity':1
	            }, speed);
        });
   	}
</script>

