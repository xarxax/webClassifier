<script type="text/javascript">
function go() {
 var index  = document.goLoc.locations.selectedIndex;
 var locName = document.goLoc.locations.options[index].value;
 document.location = '/locations.php?zip=' + locName;
}
function go2() {
 var index  = document.goLoc2.locations.selectedIndex;
 var locName = document.goLoc2.locations.options[index].value;
 document.location = '/locations.php?zip=' + locName;
}
function go3() {
 var index  = document.goLoc2.locations.selectedIndex;
 var locName = document.goLoc2.locations.options[index].value;
 if(locName == "home"){
    // Try HTML5 geolocation.
    if (navigator.geolocation) {
     navigator.geolocation.getCurrentPosition(function(position) {
       var pos = {
         lat: position.coords.latitude,
         lng: position.coords.longitude
       };

       document.location = '/locations.php?loc=' + locName + "&lat=" + position.coords.latitude + "&lng="+position.coords.longitude;
     }, function(e) {
       alert("Sorry, we can't find your location." + e.code + e.message);
     });
    } else {
     // Browser doesn't support Geolocation
     alert("Sorry, we can't find the location of your browser.");
    }    
 }else{
    document.location = '/locations.php?loc=' + locName;
 }
}
function go4() {
 var index  = document.goLoc.locations.selectedIndex;
 var locName = document.goLoc.locations.options[index].value;
 if(locName == "home"){
    // Try HTML5 geolocation.
    if (navigator.geolocation) {
     navigator.geolocation.getCurrentPosition(function(position) {
       var pos = {
         lat: position.coords.latitude,
         lng: position.coords.longitude
       };

       document.location = '/locations.php?loc=' + locName + "&lat=" + position.coords.latitude + "&lng="+position.coords.longitude;
     }, function(e) {
       alert("Sorry, we can't find your location." + e.code + e.message);
     });
    } else {
     // Browser doesn't support Geolocation
     alert("Sorry, we can't find the location of your browser.");
    }    
 }else{
    document.location = '/locations.php?loc=' + locName;
 }
}
function getMyLoc() {
    // Try HTML5 geolocation.
    if (navigator.geolocation) {
     navigator.geolocation.getCurrentPosition(function(position) {
       var pos = {
         lat: position.coords.latitude,
         lng: position.coords.longitude
       };

       document.location = "/locations.php?loc=home&lat=" + position.coords.latitude + "&lng="+position.coords.longitude;
     }, function(e) {
       alert("Sorry, we can't find your location." + e.code + e.message);
     });
    } else {
     // Browser doesn't support Geolocation
     alert("Sorry, we can't find the location of your browser.");
    }    
}
</script>
