<script type="text/javascript">


$(function() {
  $("#nav img.rollover").hover(function() {
    $(this).attr("src", $(this).attr("src").split("_off.").join("_on."));
	$("#hilt_bar img").attr("src", "images/home/home_hilt_on.png");
	  }, function() {
    $(this).attr("src", $(this).attr("src").split("_on.").join("_off."));
	$("#hilt_bar img").attr("src", "images/home/home_hilt_off.png");
  });
});

// SUBNAV ROLLOVERS
$(function() {
  $("#secondary_nav a.rollover").hover(function() {
    $(this).addClass("active");
  }, function() {
    $(this).removeClass("active");
  });
});


// Clickable Block
$(document).ready(function(){
	$(".secondary_windows div").click(function(){
	  window.location=$(this).find("a").attr("href"); return false;
	});
});



</script>

