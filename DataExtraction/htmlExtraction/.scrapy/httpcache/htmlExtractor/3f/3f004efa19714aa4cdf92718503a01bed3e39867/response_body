	function contact_form_submit()
	{
		$('#contact_validate_display').css('display', 'none');
		var self = this;
		var data = {
			action : 'contact_action',
			name: $('#yourname').val(),
			company_name : $('#companyname').val(),
			company_address : $('#companyaddress').val(),
			phone: $('#telephone').val(),
			email: $('#email').val(),
			message: $('#products').val(),
			private: $('#contact').val(),

		};
		val = {
      type : 'POST',
			dataType : 'json',
			url: 'https://www.bowlander.co.uk/wp-admin/admin-ajax.php',
      data : data,
    };
		var obj = $.ajax(val);
		obj.done(function(data){
			var obj = data.response;
				if(data.response == "form_validate_fail")
				{
					$('#contact_validate_display').html(data.msg);
					$('#contact_validate_display').css('display', 'block');
					return;
				}
				if(data.response == "form_ok")
				{
					myModal.foundation('close');
					$('#contact-modal').foundation('open');
				}
		});
		obj.error(function(data){
			$('#error-modal').foundation('open');
		});
	}

	function nmf_contact_form_submit()
	{
		$('#nmf_contact_validate_display').css('display', 'block');

		var self = this;
		var data = {
			action : 'contact_action',
			name: $('#nmf_yourname').val(),
			company_name : $('#nmf_companyname').val(),
			company_address : $('#nmf_companyaddress').val(),
			phone: $('#nmf_telephone').val(),
			email: $('#nmf_email').val(),
			message: $('#nmf_products').val(),
			private: $('#nmf_contact').val(),

		};
		val = {
			type : 'POST',
			dataType : 'json',
			url: 'https://www.bowlander.co.uk/wp-admin/admin-ajax.php',
			data : data,
		};
		var obj = $.ajax(val);
		obj.done(function(data){
			var obj = data.response;
				if(data.response == "form_validate_fail")
				{
					$('#nmf_contact_validate_display').html(data.msg);
					$('#nmf_contact_validate_display').css('display', 'block');
					return;
				}
				if(data.response == "form_ok")
				{
					$('#contact-modal').foundation('open');
				}
		});
		obj.error(function(data){
			$('#error-modal').foundation('open');
		});
	}


	function newsletter_form_submit()
	{
		$('#newsletter_validate_display').css('display', 'none');
		var self = this;
		var data = {
			action : 'newsletter_action',
			email: $('#contact-email').val(),
			private: $('#newsletter').val()
		};
		val = {
      type : 'POST',
			dataType : 'json',
			url: 'https://www.bowlander.co.uk/wp-admin/admin-ajax.php',
      data : data,
    };
		var obj = $.ajax(val);
		obj.done(function(data){
			var obj = data.response;
				if(data.response == "form_validate_fail")
				{
					$('#newsletter_validate_display').html("Please enter a valid email address");
					$('#newsletter_validate_display').css('display', 'block');
					return;
				}
				if(data.response == "form_ok")
				{
					$('#newsletter-modal').foundation('open');
				}
		});
		obj.error(function(data){
			$('#error-modal').foundation('open');
		});
	}



	</script>

