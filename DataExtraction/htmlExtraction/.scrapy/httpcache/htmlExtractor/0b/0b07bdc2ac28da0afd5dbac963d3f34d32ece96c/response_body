	$(document).ready(function() {
	
		setInterval(function() {
			$("body").css({backgroundPosition:(parseInt($(window).width())/2-(1335/2)) + "px 0px"});
			
			if($(".goog-te-banner-frame").length>0 && $(".goog-te-banner-frame").is(":visible")) {
				$(".page .media .resources .inner .news p span").css({position:"static",fontWeight:"normal",color:"#FFF"});
				$(".closed > span span span").css({color:"#67A5BE"});
				$(".opened > span span span").css({color:"#000"});				
				$("html").css({backgroundPosition:"left 40px"});	
			} else {
				$(".page .media .resources .inner .news p span").css({position:"absolute"});				
				$(".closed > span").css({color:"#67A5BE"});
				$(".opened > span").css({color:"#000"});					
				$("html").css({backgroundPosition:"left 0px"});	
			}
						
		},100)
										
		$(".left-column-page a").each(function() {
			if(this.href == window.location) {
				$(this).addClass("active");	
			}
		});
		
		$.fn.pause = function(duration) {
			$(this).animate({ dummy: 1 }, duration);
			return this;
		};
		
		// translate
		
		styleTranslate = setInterval(function() {
			if($(".goog-te-gadget option").length>0) {
				$(".goog-te-gadget").css({height:28,overflow:"hidden"});
				$(".goog-logo-link").remove();
				$(".goog-te-combo option:last").remove();
				$(".goog-te-combo option:first").remove();				
				$(".goog-te-combo").prepend('<option value="" selected>Select Language</option><option value="es">Spanish</option>');
				$(".goog-te-combo").val("");				
				clearInterval(styleTranslate);
			}
		},100);
		
		// LOGO
		$('.logo').live("click", function() {
							window.location = "/"
					});	
		
		// TOP IMAGE
		$('.top-nav img').live("click", function() {
			window.location = "/"
		});											
	
		// TOP NAV
		$('.top-nav ul li').hover(function() {
			$(this).find('ul').show();
			}, function() {
			$(this).find('ul').hide();
		});
		
		// BACK TO TOP
		$('#backToTop, a.back').click(function(){
			 $('html, body').animate({scrollTop: '0px'}, 300);
			 return false;
		});
		
		// NAVIGATION
		$('.navigation ul li').hover(function() {
			$(this).addClass('rollover');
			}, function() {
			$(this).removeClass('rollover');
		});
		
		$(".navigation ul li a").each(function() {
			if(this.href==window.location) {
			}
		});
	
		$('.navigation ul ul li').hover(function() {
			$(this).addClass('rollover');
			$(this).find('ul').show();
			}, function() {
			$(this).find('ul').hide();
			$(this).removeClass('rollover');
		});
		
		$('.navigation ul ul ul li').hover(function() {
			$(this).removeClass();
		});
	
		$('.navigation ul ul ul').prepend('<li class="first">&nbsp;</li>');
		$('.navigation ul ul ul').append('<li class="last">&nbsp;</li>');
	
		
		// SITEMAP, NEWSLETTER DIALOG
		$("#siteMap").dialog({
			width: 910,
			modal: true,
			autoOpen: false
		});
		
		$('#siteMap span').hover(function() {
			$(this).addClass('rollover')
			}, function() {
			$(this).removeClass('rollover');
		});
		
		$("#newsletterPop, #roadshowsPop").dialog({
			width: 500,
			modal: true,
			height: 575,
			autoOpen: false
		});
		
		$("#emailFriendPop").dialog({
			width: 500,
			modal: true,
			height: 350,
			autoOpen: false
		});
		
		$("#mapPop").dialog({
			width: 1000,
			modal: true,
			height: 600,
			autoOpen: false				  
		});
		
		// OPEN SITEMAP DIALOG
		$('#siteMapLink, #siteMapLink2').click(function() {
			$("#siteMap").load("/inc.sitemap.php",function(){
				$("#siteMap").dialog('open');
				$("#siteMap").data("active",$(".corp .division").attr("id"));
				siteMapAccordion();
			});
		});
			
		// SITEMAP ACCORDION
		$("#siteMap span").disableSelection();
		
		$('#siteMap span').live("click", function() {
			$("#siteMap").data("active",$(this).next(".division").attr("id"));
			$("#siteMap .division").each(function(index) {
				//console.log($(this).attr("id"));
				if($("#siteMap").data("active")==$(this).attr("id")) {
					$(this).animate({height:225});
				} else {
					$(this).animate({height:0});				
				}
			});
		});	
		
		// SITEMAP ACCORDION TOP LINK
		$(".corpLink").live("click",function() {
			$("#siteMap").data("active",$(".corp .division").attr("id"))
			siteMapAccordion();														
		});
		
		$(".aniloxLink").live("click",function() {
			$("#siteMap").data("active",$(".anilox .division").attr("id"));
			siteMapAccordion();													
		});
		$(".graphicLink").live("click",function() {
			$("#siteMap").data("active",$(".graphic .division").attr("id"));
			siteMapAccordion();													
		});
		$(".scientificLink").live("click",function() {
			$("#siteMap").data("active",$(".scientific .division").attr("id"));
			siteMapAccordion();													
		});	
				
		$("#newsletterPop").dialog({
			autoOpen:false											
		});
		$("#btnNewsletter").live("click",function() {
			popNewsletterSignUp("#newsletter");
		});
		$("#newsletter").live("keypress",function(e) {
			if(e.keyCode==13) {
				popNewsletterSignUp("#newsletter");
			}
		});
		
		$("#btnNewsletterSide").live("click",function() {
			popNewsletterSignUp("#newsletterSide");
		});
		$("#newsletterSide").live("keypress",function(e) {
			if(e.keyCode==13) {
				popNewsletterSignUp("#newsletterSide");
			}
		});
		
		$("a[title='Email To A Friend']").attr("href","javascript:;").live("click",function() {
			$("#emailFriendPop").load("/inc.emailFriend.php",function() {
				$("#pageURL").val(window.location);																							  
				$("#emailFriendPop").dialog("open");
				
			});
		});
		
					
			
		
		// FOOTER H4 LINKS
		$("h4.red").css({cursor:"pointer"}).live("click",function() {
			window.location = "/AniloxRolls";
		});
		$("h4.green").css({cursor:"pointer"}).live("click",function() {
			window.location = "/GraphicSolutions";
		});
		$("h4.blue").css({cursor:"pointer"}).live("click",function() {
			window.location = "/HarperScientific";
		});	
		$("h4.grey").css({cursor:"pointer"}).live("click",function() {
			window.location = "/Ex";
		});	
		
		// IE6 IS DUMB
		$(document).pngFix();

		// side nav accordion
		$("li.toplevel").css({overflow:"hidden"});
		$("li.toplevel a").live("click",function() {
			if(!$(this).parent().is(".open")) {
				if($(this).is(".toplevel:first")) {
					clicked = $(this);
					$(".toplevel.active").removeClass("active");
					clicked.addClass("active");
					
					$("li.toplevel").each(function() {
						if(!$(this).is(".open")) {
								clicked.parent().animate({height:clicked.parent().data("oHeight")},500,function() {
								clicked.parent().addClass("open")
								
							});
						} else {
							$(this).stop().animate({height:30},500).removeClass("open");							
						}
					});
					
				}
			}
		});
		$("a.active").parents(".meatbulb").find("a:first").wrap("<strong></strong>");				
		$("a.active").parents(".subway").find("a:first").addClass("active");
		$(".meatbulb").each(function() {
			//$(this).find("a:first").attr("href",$(this).find("li:first a:first").attr("href"));									  
		});
		$(".subway").each(function() {
			//$(this).find("a:first").attr("href",$(this).find("li:first a:first").attr("href"));
		});
		$(".meatbulb>a").hover(function() {
			$(this).css({textDecoration:"none"});
		},function() {
		});
		
		
		$("li.toplevel").each(function() {
			$(this).data("oHeight",$(this).height());
			if($(this).find(".active").length<=0) {
				$(this).css({height:30});	
			} else {
				$(this).addClass("open");
				$(this).find("a:first").addClass("current");
			}
		});

		// apply target="_blank" to any external, pdf, or jpg
		$(".details .copy a").each(function() {
			if($(this).attr("href").indexOf("http://")>-1 || $(this).attr("href").toLowerCase().indexOf(".pdf")>-1 || $(this).attr("href").toLowerCase().indexOf(".jpg")>-1) {
				$(this).attr("target","_blank");	
			}
		});
		
		$(".roadshowSignup").css({cursor:"pointer"}).live("click",function(){
			$("#roadshowsPop").load("/inc.roadshowPop.php",function() {
				$("#roadshowsPop").dialog("open");														
				$("#showName").val($(".content .copy .news h2:first").html());
				$("#showURL").val(window.location);				
			});
		});

			
	});
	
	function popNewsletterSignUp(elem) {
		if($(elem).val()>"" && $(elem).val()!="Enter Email" && $(elem).val().indexOf("@")>0 && $(elem).val().indexOf(".") > 0) {													
			$("#email").val($(elem).val());
			$("#newsletterPop").load("/inc.newsletter.php",function() {
				$("#newsletterPop").dialog("open"); 
				$("#newsletterPop #email").val($(elem).val());
			});
		} else {
			alert("Please enter a valid email address.");	
		}	
	}
	
	function siteMapAccordion() {
		
		$("#siteMap .division").each(function(index) {
			if($("#siteMap").data("active")==$(this).attr("id")) {
				$(this).animate({height:250});
			} else {
				$(this).animate({height:0});				
			}
		});
		$("#dialogHeight").remove();
		
	}
		
</script>
