<script>
	jQuery(function ($) {
		var ids = ['fname', 'lname', 'email', 'phone', 'comments'];
		var rx = /\S/;
		var cssError = "error-required";

		function initContact() {
			$('#contact-success').hide();
			$('#contact-form').get(0).reset();
			$('#contact-form').show();
		}

		function testRequired() {
			var validFailed = false;
			ids.forEach(function (v) {
				var val = $('#' + v).val();
				if (!rx.test(val)) {
					$('#' + v).addClass(cssError);
					validFailed = true;
				} else {
					$('#' + v).removeClass(cssError);
				}
			});
			return !validFailed;
		}
		initContact();
		jQuery('.open-popup').click(function () {
			jQuery("#overlay, #popup").addClass('opened')
		})
		jQuery('.submit, #overlay, .close').click(function () {
			jQuery("#overlay, #popup").removeClass('opened')
		})
		$('#contact-form').on("submit", function (event) {
			event.preventDefault();
			if (testRequired()) {
				$.post(
					"ajax.anon.aspx?action=contact",
					$(this).serialize(),
					function (data) {
						console.log(data)
						var r = $.Eleview.parseAjaxResponse(data);
						if (r == null) return;
						if ("" != r.Data.Data) {
							alert(r.Data.Data);
						} else {
							$('#contact-success').show();
							$('#contact-form').hide();
							setTimeout(initContact, 5000);
						}
					}
				);
			}
		});
	});
</script>
