  <script>
    $(function(){
    $(".dropdown").hover(            
            function() {
                $('.dropdown-menu', this).stop( true, true ).fadeIn("fast");
                $(this).toggleClass('open');
                $('span', this).toggleClass("caret caret-up");                
            },
            function() {
                $('.dropdown-menu', this).stop( true, true ).fadeOut("fast");
                $(this).toggleClass('open');
                $('span', this).toggleClass("caret caret-up");                
            });
    });
	 (function(){
      var $introCopyLIs = $('ul#introCopy li'),
          currentCopy = 0,
          crossFade = function() {
            console.log(currentCopy);
            var fadeNext = function() {
              currentCopy++;
              if (currentCopy > $introCopyLIs.length - 1) {
                currentCopy = 0;
              }            
              $($introCopyLIs[currentCopy]).fadeIn();
              if (currentCopy==$introCopyLIs.length) currentCopy = 0;
          };
          $($introCopyLIs[currentCopy]).fadeOut({complete:fadeNext});
        },
        introTimer = setInterval(crossFade,5000);
    }());

      var leftcopy = document.getElementById("leftcopy");
          maincopy = document.getElementById("maincopy");
          title = document.getElementById("title");
          social = document.getElementById("social");
          socialCopy = document.getElementById("socialcopy");
		  footer = document.getElementById("footer");
      TweenMax.from(leftcopy, 1, { opacity:0, delay:.5}); 
      TweenMax.from(title, .5, {y:-30, opacity:0, delay:.5, ease:Back.easeOut}); 
      TweenMax.from(maincopy, .5, { opacity:0, delay:1, ease:Back.easeOut});
      TweenMax.from(social, .5, { opacity:0, delay:1.5}); 
      TweenMax.from(socialCopy, .5, {y:-30, opacity:0, delay:2, ease:Back.easeOut}); 
	  TweenMax.from(footer, .5, { opacity:0, delay:1.5}); 
      
      
    </script>
