		rearrangeImagemap();

		$(window).resize(function() {
			rearrangeImagemap();
		});

		function rearrangeImagemap() {
			var retrofits = $('#retrofits');
			var retrofitsImage = $('#retrofits-image');
			var retrofitsAreas = $('#retrofits area');
			var IMAGEORIGINALWIDTH = 705;
			var imageActualWidth = retrofitsImage.width();
			if(retrofits.length) {

				if(imageActualWidth < IMAGEORIGINALWIDTH) {
					retrofitsAreas.each(function() {
						var coordsArr = $(this).attr('orig-coords').split(',');
						var coordsNew = "";
						coordsArr.forEach(function(item) {
							coordsNew = coordsNew + ',' + item / IMAGEORIGINALWIDTH * imageActualWidth;
						});
						console.log(coordsNew.substring(1));
						$(this).attr('coords', coordsNew.substring(1));
					});
				} else {
					retrofitsAreas.each(function() {
						$(this).attr('coords', $(this).attr('orig-coords'));
					});
				}

			};
		};

			});
