    <script type="text/javascript">
jQuery(function(){

  /* select the old and new search boxes */
  var oldSearchBox = jQuery('form#search-theme-form');
  var newSearchBox = jQuery('div#chooseSearchType');
  var newSearchBoxPartToHide = jQuery('div#handbookSearchNew');

  /* show the new search box and hide the old one */
  oldSearchBox.css('display','none');
  newSearchBox.fadeIn(1000);

  /* move the new search box html (found in content below) to the new position in the header */
  newSearchBox.insertAfter(jQuery('div#navigation'));
  oldSearchBox.insertBefore(newSearchBoxPartToHide);

  /* monitor for changes to the radio buttons, and load the correct search box depending on new value */
  jQuery('form#searchSelect input[type=radio]').change(function() {
        if (this.value == 'handbook') {
            oldSearchBox.css('display','none');
            newSearchBoxPartToHide.fadeIn(200);
        }
        else if (this.value == 'entireSite') {
            newSearchBoxPartToHide.css('display','none');
            oldSearchBox.fadeIn(1000);
        }
    });

});
</script>

