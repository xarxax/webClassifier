<script>
    $(window).load(function () {
        var winH = $(window).height();
        var bodyH = $('body').height();
        //console.log(bodyH);
        if (winH > bodyH) {
            $('body').css('height', winH);
            $('footer').addClass('fixfooter');
        }
    });
    $(window).resize(function () {
        $('footer').removeClass('fixfooter');
        $('body').css('height', 'auto');
        var winH = $(window).height();
        var bodyH = $('body').height();
        if (winH > bodyH) {

            $('body').css('height', winH);
            $('footer').addClass('fixfooter');
        }
    });
</script>


