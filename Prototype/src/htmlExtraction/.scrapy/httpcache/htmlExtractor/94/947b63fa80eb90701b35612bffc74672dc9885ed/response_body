		<script src="/resources/js/jquery.min1.12.4.js"></script>
		<script src="/resources/js/ui-plugin.js"></script>
		<script src="/resources/js/ui-common.js"></script>
		<script>
			var oBxSettings = {};
			var company_str = $('#section1 .intro > p').html();
			var newStr = company_str.replace('<br>', ' ');
			var career_str = $('#section2 .intro > p').html();
			var career_newStr = career_str.replace('<br>', ' ');
			
			$(document).ready(function(){
				$("#fullpage").fullpage({
					navigation: true,
					navigationPosition: 'right',
					navigationTooltips: ['INTRO', 'COMPANY', 'CAREERS', 'CAREERS'],
					verticalCentered: false,
					onLeave: function(anchorLink, index){
						var loadedSection = $(this);
						if(index == 2){
							$('#fp-nav').removeClass('white');
						} else {
							$('#fp-nav').addClass('white');
						}
					}
				});
				$(".intro-slider").bxSlider({
						auto: true,
						autoControls: true,
						pause : 5000
				});
				screen();
				careerSlider();
				$('#fp-nav').addClass('white');
				$('#fp-nav li').eq(3).css({'top':'-32px', 'z-index':'0'});
				$(".bx-controls-auto a.bx-start").hide();
				$(".bx-controls-auto a").click(function(){
					$(this).hide().siblings().show();
				});
				screen();
				company_text();
				career_text();
				$(window).resize(function(){
					company_text();
					career_text();
				});
			});
			function careerSlider(){
				var slider = $('.career-slider').bxSlider(oBxSettings);
				var sliderFullwidth = $('.career-slider-wrap .bx-wrapper').width();
				var sliderwidth = $('.career-slider-wrap .bx-wrapper').width() / 5;
				if($(window).width() > 1023){
					oBxSettings.slideWidth = sliderwidth;
					oBxSettings.minSlides = 1;
					oBxSettings.maxSlides = 5;
					oBxSettings.pager = false;
					oBxSettings.infiniteLoop = false;
					oBxSettings.hideControlOnEnd = true;
					oBxSettings.touchEnabled = false;
					slider.reloadSlider();
				} else {
					oBxSettings.slideWidth = sliderwidth * 5;
					oBxSettings.minSlides = 1;
					oBxSettings.maxSlides = 1;
					oBxSettings.pager = true;
					oBxSettings.infiniteLoop = false;
					oBxSettings.hideControlOnEnd = true;
					oBxSettings.touchEnabled = true;
					slider.reloadSlider();
				}
				$(window).on('resize', function(){
					var sliderFullwidth = $('.career-slider-wrap .career-wrapper').width();
					var sliderwidth = $('.career-slider-wrap .bx-wrapper').width() / 5;
					if($(window).width() > 1023){
						oBxSettings.slideWidth = sliderwidth;
						oBxSettings.minSlides = 1;
						oBxSettings.maxSlides = 5;
						oBxSettings.pager = false;
						oBxSettings.infiniteLoop = false;
						oBxSettings.hideControlOnEnd = true;
						oBxSettings.touchEnabled = false;
						slider.reloadSlider(oBxSettings);
					} else {
						oBxSettings.slideWidth = sliderwidth * 5;
						oBxSettings.minSlides = 1;
						oBxSettings.maxSlides = 1;
						oBxSettings.pager = true;
						oBxSettings.infiniteLoop = false;
						oBxSettings.hideControlOnEnd = true;
						oBxSettings.touchEnabled = true;
						slider.reloadSlider(oBxSettings);
					}
				});
			}
			/* company */
			function company_text(){
				if($(window).width() >= 340){
					$('#section1 .intro > p').html(company_str);
				} else {
					$('#section1 .intro > p').html(newStr);
				}
			}
			/* careers */
			function career_text(){
				if($(window).width() > 768){
					$('#section2 .intro > p').html(career_newStr);
				} else {
					$('#section2 .intro > p').html(career_str);
				}
			}
	
			/* 1366 x 768 혹은 height 768 이하 노트북 해상도 */
			function screen(){
				if($(window).width() >= 1024 && $(window).height() < 768){
					$(".intro-container").css('margin-top', '-185px');
					$('.section .intro h1').css('margin-top', '60px');
					$('#section0 .intro h1').css('margin-top', '-10px');
					$('.info-btn-wrap, .career-slider-wrap').css('margin-top', '30px');
					$('.info-btn-wrap li').css({'max-height':'240px', 'overflow':'hidden'});
				}
			}
			
		</script>
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
		
		  ga('create', 'UA-79989612-3', 'auto');
		  ga('send', 'pageview');
		
		</script>
