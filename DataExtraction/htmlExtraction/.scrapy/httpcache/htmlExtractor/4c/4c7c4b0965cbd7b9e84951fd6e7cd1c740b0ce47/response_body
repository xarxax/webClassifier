<script>

    /*스크롤박스*/
if(document.getElementById("market_2").offsetHeight > 800){ //익스플로러 오류로 조건적용
	$(document).ready(function(){	
		$(window).scroll(function(){
	    var scrollTop = jQuery(document).scrollTop();
	    console.log("scrollTop : " + scrollTop); 
	    			if (scrollTop < 215) {
	        	scrollTop = 215;
	   	 }	
	    jQuery("#scroll_box").stop();
	    jQuery("#scroll_box").animate( { "top" : scrollTop });	    	      
		});
	
	
	    /*스크롤 박스 멈추기*/
	  $(window).scroll(function(){ 
		  if(parseInt($(window).scrollTop() + $(window).height()) >= parseInt($("footer").offset().top)) {
		                       jQuery("#scroll_box").stop();	                      
		      return false;
		  }
		});
	});
}

function phone() {
	alert("아이디/비밀번호를 잊어버리신 경우 1522-1730으로 문의 바랍니다.");
}
function login()
	{
		if (document.login.id.value.length < 1 || document.login.id.value == '아이디')
		{
			alert("회원 아이디를 기입해 주세요.");
			document.login.id.focus();
			return;
		}
		if	(document.login.pw.value.length < 1 || document.login.pw.value == '비밀번호')
		{
			alert("패스워드를 기입해 주세요.");
			document.login.pw.focus();
			return;
		}
		if (document.login.useridSaveYN.checked)
		{
			document.login.useridSaveYN.value="1"
		}
		else
		{
			document.login.useridSaveYN.value="0"
		}
		
		document.login.submit();
	}
function enterkey2() {
    if (window.event.keyCode == 13) {

         login();
    }
}
function getCookie(cName) {
    cName = cName + '=';
    var cookieData = document.cookie;
    var start = cookieData.indexOf(cName);
    var cValue = '';
    if(start != -1){
        start += cName.length;
        var end = cookieData.indexOf(';', start);
        if(end == -1)end = cookieData.length;
        cValue = cookieData.substring(start, end);
    }
    return unescape(cValue);
}
</script>

