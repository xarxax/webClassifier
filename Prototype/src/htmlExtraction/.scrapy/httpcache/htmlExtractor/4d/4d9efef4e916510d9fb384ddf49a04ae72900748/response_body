<script type="text/javascript">
try { throw (nutabs_init == true) ? false : true; } catch(e) {
	if(e) {
		var nutabs_init = true;
		window.addEvent('domready', function(){
			// search all tab blocks
			$$('div.tabs').each(function(el){
				// find all h2 and use as tab
				var tabNavElem = el.getChildren('h2');
				if(tabNavElem.length > 0) {
					var tabNav = new Element('ul', {'class': 'tabs-nav'}).inject(el, 'before');
					var tabNavCount = 0;
					tabNavElem.each(function(el){
						var tabNavLiClass = tabNavCount > 0 ? {} : {'class':'selected first'};
						var tabNavLi = new Element('li', tabNavLiClass).inject(tabNav);
						tabNavLi.grab(el);
						tabNavCount++;
					});
				}
				var tabContentItems = el.getChildren('div');
				tabContentItems[0].addClass('active');
				el.addClass('enabled');
				
				// add Tabs
				new nuTabs(tabNavElem, tabContentItems, {});
			});
		});
	}
}
</script>

