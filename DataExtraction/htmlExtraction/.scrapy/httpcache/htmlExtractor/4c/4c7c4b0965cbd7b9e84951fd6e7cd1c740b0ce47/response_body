$(function(){
    $("#StartDate").datepicker();
    $("#EndDate").datepicker();
});
 	$(".btn").click(function() {
  $("#menu,.page_cover,html").addClass("open");
  window.location.hash = "#open";
});

window.onhashchange = function() {
  if (location.hash != "#open") {
    $("#menu,.page_cover,html").removeClass("open");
  }
};

function dateAddDel(sDate, nNum, type) {
    var yy = parseInt(sDate.substr(0, 4), 10);
    var mm = parseInt(sDate.substr(5, 2), 10);
    var dd = parseInt(sDate.substr(8), 10);
    
    if (type == "d") {
        d = new Date(yy, mm - 1, dd + nNum);
    }
    else if (type == "m") {
        d = new Date(yy, mm - 1 + nNum, dd);
    }
    else if (type == "y") {
        d = new Date(yy + nNum, mm - 1, dd);
    }
 
    yy = d.getFullYear();
    mm = d.getMonth() + 1; mm = (mm < 10) ? '0' + mm : mm;
    dd = d.getDate(); dd = (dd < 10) ? '0' + dd : dd;
 
    return '' + yy + '-' +  mm  + '-' + dd;
}
var temp; 
function sink(obj,akey) { 
	
var dt = new Date();
var month = dt.getMonth()+1;
var day = dt.getDate();
 if((''+month).length == 1){month = '0'+month;}
 if((''+day).length == 1){day = '0'+day;}
var year = dt.getFullYear();
var date = year + '-' + month + '-' + day ;
day7=dateAddDel(date, -6, 'd'); 
dmonth=dateAddDel(date, -1, 'm');
d3month=dateAddDel(date, -3, 'm');
d6month=dateAddDel(date, -6, 'm'); 
dyear=dateAddDel(date, -1, 'y');

  if(temp) { 
    temp.style.color = ""; 
    temp.style.fontWeight = "normal"; 
  } 
  obj.style.color = "darkblue"; 
  obj.style.fontWeight = "bold"; 
temp=obj;

 if(akey == 'a'){
  document.find_form.StartDate.value = day7;
  document.find_form.EndDate.value = date;
 }
 if(akey == 'b'){
  document.find_form.StartDate.value = dmonth;
  document.find_form.EndDate.value = date;
 }
 if(akey == 'c'){
  document.find_form.StartDate.value = d3month;
  document.find_form.EndDate.value = date;
 }
 if(akey == 'd'){
  document.find_form.StartDate.value = d6month;
  document.find_form.EndDate.value = date;
 }
 if(akey == 'e'){
  document.find_form.StartDate.value = dyear;
  document.find_form.EndDate.value = date;
 }
 if(akey == 'f'){
  document.find_form.StartDate.value = '';
  document.find_form.EndDate.value = '';
 }
} 

$(window).scroll(function() {
	var scroll = $(window).scrollTop();
if (scroll >= 200) {
	$("#page_up_btn").css('opacity','1'); 
 }
 else{
	$("#page_up_btn").css('opacity','0'); 
 }
if (scroll >= 300) {
	$("#pop_menu").css('visibility','visible'); 
	$("#pop_menu").css('height','53px');
	$("#pop_menu").css('opacity','1');
 }
 else{
	$("#pop_menu").css('visibility','hidden'); 
	$("#pop_menu").css('height','0px');
	$("#pop_menu").css('opacity','0');
 } 
});
function member(){
	alert('유료회원만 사용 가능합니다');

	location.href="login.asp";

}
var b = "";
var ua = window.navigator.userAgent;
if(ua.indexOf('MSIE') > 0 || ua.indexOf('Trident') > 0)
 b = "IE";
else if(ua.indexOf('Opera') > 0 || ua.indexOf('OPR') > 0)
 b = "Opera";
else if(ua.indexOf('Firefox') > 0)
 b = "Firefox";
else if(ua.indexOf('Safari') > 0) {
 if(ua.indexOf('Chrome') > 0)
  b = "Chrome";
 else
  b = "Safari";
}
	font = 1;
	function resize(f){
//		var a = document.getElementById("market_2").style.height;
		if(f==0) font = 1;
		if(f==1) font = 1.1;
		else font += f;
		if(b=="IE" || b=="Firefox") {
			document.getElementById("size").style.transform = "scale("+font+")";
	//		document.getElementById("market_2").style.height = a*font;
		}
		else {
			document.getElementById("size").style.zoom = font;
		}
	}
	function open_font(){
		if (document.getElementById("font").style.display == "none")
		document.getElementById("font").style.display = "block";	
		else
			document.getElementById("font").style.display = "none";	
	}
	function enterkey() {
    if (window.event.keyCode == 13) {
         document.find_form.submit();
    }
}

