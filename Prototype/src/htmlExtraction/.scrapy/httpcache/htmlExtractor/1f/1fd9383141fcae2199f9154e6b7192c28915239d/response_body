//Usp
var uspnum = 0;
var usp= new Array();

usp[0]="Book online";
usp[1]="Pay at the hotel!";
usp[2]="Best price guaranteed!";

function showusp(){
	var el = document.getElementById('usps');
	el.innerHTML="";
	if (uspnum % 2)
	  el.className = "even"
	else
	  el.className = "odd"
	el.innerHTML=usp[uspnum%3];
	uspnum++;
	setTimeout("showusp()", 2000);
}

