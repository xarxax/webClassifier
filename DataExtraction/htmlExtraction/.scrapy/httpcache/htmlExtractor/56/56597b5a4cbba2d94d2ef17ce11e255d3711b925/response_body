<script language="javascript">
$(function() {
	$("a[name='homeLink']").click(function(){
		$("#home").show();
		$("#contact").hide();
		$("#areas").hide();
		$("#long").hide();
	});
	$("a[name='contactLink']").click(function(){
		$("#home").hide();
		$("#contact").show();
		$("#areas").hide();
		$("#long").hide();
		$("#contactEmail").change(function(){
			 $( "#contactEmail option:selected" ).each(function() {
				$("#contactService").val($(this).text());
			 });
		});
		$("#submit").click(function(){
			$.post( "m-a-i-l.php", { 
					sendTo: $("#contactEmail").val(), 
					service: $("#contactService").val(), 
					message: $("#contactMessage").val()
				})
				.done(function( data ) {
				alert("Message Sent");
			});
			
		});
	});
	$("a[name='areasLink']").click(function(){
		$("#home").hide();
		$("#contact").hide();
		$("#areas").show();
		$("#long").hide();
	});
	$("a[name='longLink']").click(function(){
		$("#home").hide();
		$("#contact").hide();
		$("#areas").hide();
		$("#long").show();
	});
});
</script>
