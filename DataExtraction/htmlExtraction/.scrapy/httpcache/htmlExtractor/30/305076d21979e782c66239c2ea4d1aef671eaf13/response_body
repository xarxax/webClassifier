    <script type="text/javascript">
      $(function() {
        var now = new Date();
        var h = now.getHours();
        var msg = '';
        if (h < 12) {
          msg = 'Good Morning';
        } else if (h < 17) {
          msg = 'Good Afternoon';
        } else {
          msg = 'Good Evening';
        }
        $('#home-good-time').text(msg);
      });
    </script>
