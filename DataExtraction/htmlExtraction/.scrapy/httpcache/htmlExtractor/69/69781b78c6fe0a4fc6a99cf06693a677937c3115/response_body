<script>
    $(document).ready(function () {
        AppendCategories();
    });
    function AppendCategories() {
        $.ajax({
            url: '/Category/GetCategoryNames',
            data: {},
            type: 'GET',
            success: function (data) {
                $(".productsMenu").html("");
                $.each(data, function (index, value) {
                    var link = window.location.origin + "/ProductCategory/" + value.Id + "/" + value.Name.replace(/[^a-z0-9-\s]/gi, '').replace(/[_\s]/g, '-') + "'>" + value.Name;
                    $(".productsMenu").append("<li><a href='" + link + "</a></li>");
                });
            }
        });
    }
</script></div>
