            $(document).ready(function(){
	            var cookieValue = $.cookie("megadiscookie");
	            console.log(cookieValue);
	            if (!cookieValue) {
	            	console.log("Show message");
	            	$("#cookieC").css("display", "block");
	            }
	            $("#okBtn").click(function(){
	            	$.cookie("megadiscookie", 1);
	            	$("#cookieC").css("display", "none");
		            return false;
	            });
            });
