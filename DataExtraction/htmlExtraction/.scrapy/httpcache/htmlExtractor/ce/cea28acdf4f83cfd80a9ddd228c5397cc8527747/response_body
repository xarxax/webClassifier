	show_all_locations();
	
	jQuery('#show-all-link').click(function(e){
		e.preventDefault();
		
		$('html.home_page, body.home_page').animate({ scrollTop: 850 }, "slow");
		$('html.locations_page, body.locations_page').animate({ scrollTop: 385 }, "slow");
		
		jQuery('#show-all-link').fadeOut('fast');
		jQuery('#map-single').fadeOut('fast');
		jQuery('#map').fadeIn('fast');
		show_all_locations();
	});

	//-------------------------------------------------------------------------------
	// Handle the individual clicks for each location
	jQuery('.location').click(function(){
			
		$('html.home_page, body.home_page').animate({ scrollTop: 850 }, "slow");
		$('html.locations_page, body.locations_page').animate({ scrollTop: 385 }, "slow");
	
		jQuery('#map').fadeOut('fast');
		jQuery('#map-single').fadeIn('fast');
		jQuery('#show-all-link').fadeIn('fast');
		var lat = jQuery(this).attr('data-lat');
		var lng = jQuery(this).attr('data-lng');
		var content = jQuery(this).attr('data-content');
		
		var map = new google.maps.Map(document.getElementById('map-single'), {
	    	zoom: 15,
	    	center: new google.maps.LatLng(lat,lng),
	    	mapTypeId: google.maps.MapTypeId.ROADMAP
		});
		
		var myMarker = new google.maps.Marker({
		    position: new google.maps.LatLng(lat,lng),
		    icon: "images/map-icon.png"
		});
		
		myMarker['infoWin'] = new google.maps.InfoWindow({
		    content: content
		});

		map.setCenter(myMarker.position);
		myMarker.setMap(map);
		myMarker['infoWin'].open(map, myMarker);
		
		});	
	
});

