<script type="text/javascript">
    $(document).ready(function () {

        $.get('/Home/GetWhatsNewPart', function (data) {

            var isAdmin = ('False' == "True");
           
            $("#whatsNew").html("<a href='/WhatsNew/" + data.homeContent.FirstWhatsNewId + "'>" + data.homeContent.LandingText + "</a>");
            if (isAdmin) {
                $("#whatsNew").html($("#whatsNew").html() + '<br><a class="home-more" href="/Home/HomeContent">More</a>');
            };

            $("#landingImageDiv").html("<a href='/WhatsNew/" + data.homeContent.FirstWhatsNewId + "'>" + '<img src="' + data.homeContent.FirstWhatsNewImage + '" id="landingImage" height="173" /></a>');
            for (var i = 0; i < data.whatsNewIds.length; i++) {
                $('#whatsNewMore').append("<a onclick='ChangeWhatsNew(" + data.whatsNewIds[i] + ")'><span class='numberCircle'>" + (i + 1) + "</span></a>");
            }

            if (data.whatsNewIds.length < 8) {
                if (isAdmin) {
                    $('#whatsNewMore').append("<a href='/WhatsNew'><span class='numberCircle'>+</span></a>");
                }
            }


            if (jQuery(window).width() > 400) {
                $.backstretch([data.homeContent.BackGround1, data.homeContent.BackGround2, data.homeContent.BackGround4, data.homeContent.BackGround3],
           { duration: 5000, fade: 750 });
            }
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $("ul.sf-menu").superfish();
    });
    function ChangeWhatsNew(id) {
        var isAdmin = ('False' == "True");
        $.get('/Home/GetWhatsNewLanding/' + id, function (data) {
            if (data.landingText != null) {

                if (isAdmin) {
                    $("#whatsNew").html("<a href='/WhatsNew/" + id + "'>" + data.landingText + "</a>" +
                        '<br><a class="home-more" href="/Home/HomeContent">More</a>');
                } else {
                    $("#whatsNew").html("<a href='/WhatsNew/" + id + "'>" + data.landingText + "</a>");
                }
            } else $("#whatsNew").html("");

            $("#landingImageDiv").html("<a href='/WhatsNew/" + id + "'>"+'<img src="' + data.landingImage + '" id="landingImage" height="173" /></a>');
        });
    }
</script>
