//define global var and functions
var myform;
var total;

function dototal()
{
  total=0;
  myform = document.forms[0];
  var ierror = false;
  for (i=31; i< (document.forms[0].length -4); i++)
  {
   len = myform.elements[i].length;
   mytext= myform.elements[i].value;
   if ((mytext == "")){mytext="0";}
   result = parseInt(mytext);
   if (mytext <0)
   { alert("Please enter non negative numbers"); ierror=true;}
   if ((! result) && (mytext !="0"))
   { alert("Please enter numbers only");  ierror=true;
      myform.elements[i].focus(); myform.elements[i].select();}
   total = total + parseInt(mytext);
   //(myform.elements[i].value);
  }
  var txt_total = (myform.length) -3;
  if (ierror)
     myform.elements[txt_total].value = "Error";
  else
   myform.elements[txt_total].value = total;

}
