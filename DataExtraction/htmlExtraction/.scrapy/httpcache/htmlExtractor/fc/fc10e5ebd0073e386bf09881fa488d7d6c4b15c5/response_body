$(document).ready(function(){	
	$('#submit').click(function(){
		CheckRequiredFields();
	});		
});

// Copyright 2003 Bontrager Connection, LLC
// Code obtained from http://WillMaster.com/
//
function CheckRequiredFields() {
	var errormessage = "";
	// Put field checks below this point.
	if(WithoutContent(document.contactForm.name.value))
		{ errormessage += "\n\n- Your name."; }
	if(WithoutContent(document.contactForm.email.value))
		{ errormessage += "\n\n- An email address to reply to."; }
	if(WithoutContent(document.contactForm.message.value))
		{ errormessage += "\n\n- Your message."; }
	if(document.contactForm.captcha.value != document.contactForm.captcha_code.value){
		{ errormessage += "\n\n- A correct captcha answer."; }
	}
	// Put field checks above this point.	
        if(errormessage.length > 2)
        {
            alert('SORRY!\nThis form cannot be submitted without:' + errormessage);		
            return false;
        }
        else
        {
            $('#contactForm').submit();
        }    
} // end of function CheckRequiredFields()


//function WithoutContent(ss) {
//if(ss.length > 0) { return false; }
//return true;
//}
function WithoutContent(ss) {
if (ss.replace(/^\s+/g, '').length > 0) { return false; }
return true;
}

</script>

