<script type="text/javascript">

$('#snapshot ul.newsflash-vert li').first().addClass('current');

$('#snapshot ul.newsflash-vert li').each(function(i) {
    i = i + 1;

    $(this).attr('id', 'tab-' + i);
    
    if(i !== $('#snapshot ul.newsflash-vert li').length) {
        $(this).append('<div class="faIcon tabPagination right" rel="tab-' + (i + 1) + '">&#xf061;</button>');
    }
    if(i !== 1) {
        $(this).append('<div class="faIcon tabPagination left" rel="tab-' + (i - 1) + '">&#xf060;</button>');
    }               
});            

$('#snapshot ul.newsflash-vert > li[class!="current"]').hide();

$('.tabPagination').on('click', function() {
	$('.current').removeClass('current');
	$('#snapshot ul.newsflash-vert > li[class!="current"]').hide();
	$('#' + $(this).attr('rel')).show(); 
});



</script>


