        $(document).ready(function(){
            $(".navmenu").click(function(){
                $('ul.navmenu-expanded').not( $(this).next('ul.navmenu-expanded')).removeClass("expanded").slideUp();
                $(this).next('ul.navmenu-expanded').toggleClass("expanded").slideToggle(250);
            });
        });
        // position swoosh img under header based on responsive screen width
        $(window).resize(function(){
            var imgWidth = $('#swoosh').width();
            var imgHeight = $('#swoosh').height();
            var HalfHeight = imgHeight/2;
            var AdjustedHeight = HalfHeight+7;
            $("#main-outer").css('margin-top','-'+AdjustedHeight+'px');
            $("#swoosh").css('margin-top','-'+AdjustedHeight+'px');
        });
    </script>
</html>
